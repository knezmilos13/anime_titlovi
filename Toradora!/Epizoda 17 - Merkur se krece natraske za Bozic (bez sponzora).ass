Dialogue: 0,0:00:05.00,0:00:09.00,K6Reklama,,0000,0000,0000,,{\an8}Obrada i prevod: Knez Miloš
Dialogue: 0,0:00:00.68,0:00:02.56,Default,,0000,0000,0000,,{\be1\i1}Da li više ne osećaš krivicu?{\i0}
Dialogue: 0,0:00:05.77,0:00:07.44,Default,,0000,0000,0000,,Napred!
Dialogue: 0,0:00:09.98,0:00:12.69,Default,,0000,0000,0000,,Jel ti se ne čini da se Kušieda ponaša nekako čudno?
Dialogue: 0,0:00:12.69,0:00:13.77,Default,,0000,0000,0000,,U pravu si.
Dialogue: 0,0:00:13.77,0:00:16.60,Default,,0000,0000,0000,,Mislim, ona je čudna po prirodi,
Dialogue: 0,0:00:16.60,0:00:19.52,Default,,0000,0000,0000,,ali u zadnje vreme zna da odluta češće nego obično.
Dialogue: 0,0:00:36.93,0:00:39.68,Default,,0000,0000,0000,,Šta ja to radim?
Dialogue: 0,0:02:15.41,0:02:19.10,Default,,0000,0000,0000,,A, da, uskoro će velika rasprodaja za kraj godine,
Dialogue: 0,0:02:19.10,0:02:20.68,Default,,0000,0000,0000,,a posle toga je na redu prolećno čišćenje.
Dialogue: 0,0:02:20.68,0:02:24.83,Default,,0000,0000,0000,,Od mesta iza ormana koje ruka ne može da dohvati pa do poleđine tatamija.
Dialogue: 0,0:02:24.83,0:02:26.83,Default,,0000,0000,0000,,Očistiću svaki centimetar.
Dialogue: 0,0:02:26.83,0:02:28.47,Default,,0000,0000,0000,,Ne! Ne!
Dialogue: 0,0:02:28.47,0:02:31.14,Default,,0000,0000,0000,,To nije bitno. Božić je. Božić!
Dialogue: 0,0:02:31.46,0:02:32.72,Default,,0000,0000,0000,,Ha?
Dialogue: 0,0:02:32.72,0:02:34.22,Default,,0000,0000,0000,,Ah, kako se radujem tome.
Dialogue: 0,0:02:34.22,0:02:36.14,Default,,0000,0000,0000,,Pretpostavljam da za sada moram da budem dobra,
Dialogue: 0,0:02:36.14,0:02:39.43,Default,,0000,0000,0000,,zato što je sada verovatno blizu Japana.
Dialogue: 0,0:02:39.43,0:02:40.31,Default,,0000,0000,0000,,Ko?
Dialogue: 0,0:02:41.36,0:02:42.74,Default,,0000,0000,0000,,Da li stvarno treba da pitaš?
Dialogue: 0,0:02:42.74,0:02:44.34,Default,,0000,0000,0000,,Deda Mraz!
Dialogue: 0,0:02:44.34,0:02:44.86,Default,,0000,0000,0000,,Ha?
Dialogue: 0,0:02:45.06,0:02:47.03,Default,,0000,0000,0000,,Daj mi to, pomoći ću ti da ga nosiš.
Dialogue: 0,0:02:47.03,0:02:48.79,Default,,0000,0000,0000,,Jel ti dobro?
Dialogue: 0,0:02:49.58,0:02:52.04,Default,,0000,0000,0000,,Bilo bi super ako bi opet došao i ove godine.
Dialogue: 0,0:02:52.04,0:02:52.77,Default,,0000,0000,0000,,Šta je bilo?
Dialogue: 0,0:02:55.64,0:02:56.91,Default,,0000,0000,0000,,Znaš...
Dialogue: 0,0:02:56.91,0:02:59.46,Default,,0000,0000,0000,,Ja {\i1}obožavam{\i0} Božić!
Dialogue: 0,0:02:59.46,0:03:03.18,Default,,0000,0000,0000,,Znam da voliš Božić, ali zašto toliko?
Dialogue: 0,0:03:03.18,0:03:05.63,Default,,0000,0000,0000,,Da li ti je potreban razlog da voliš Božić?
Dialogue: 0,0:03:05.63,0:03:07.80,Default,,0000,0000,0000,,Grad je sav ukrašen,
Dialogue: 0,0:03:07.80,0:03:10.00,Default,,0000,0000,0000,,svi se smeškaju i srećni su...
Dialogue: 0,0:03:10.61,0:03:12.80,Default,,0000,0000,0000,,Hej, pokvarićeš večeru!
Dialogue: 0,0:03:12.80,0:03:15.85,Default,,0000,0000,0000,,Znam, zato jedem samo jednu.
Dialogue: 0,0:03:15.85,0:03:17.23,Default,,0000,0000,0000,,Ne, ne razumeš.
Dialogue: 0,0:03:17.23,0:03:20.09,Default,,0000,0000,0000,,Večeras proslavljamo završetak tvoje suspenzije.
Dialogue: 0,0:03:20.09,0:03:23.23,Default,,0000,0000,0000,,I žutopreka je proizvod iz prirode i prilično je skupa.
Dialogue: 0,0:03:23.87,0:03:25.51,Default,,0000,0000,0000,,Trebala bi bar da se praviš zahvalna zbog cene.
Dialogue: 0,0:03:25.51,0:03:26.99,Default,,0000,0000,0000,,Jej... Jej...
Dialogue: 0,0:03:26.99,0:03:27.97,Default,,0000,0000,0000,,Obrok sa žutoperkom...
Dialogue: 0,0:03:27.97,0:03:28.50,Default,,0000,0000,0000,,Još jednom.
Dialogue: 0,0:03:28.50,0:03:30.66,Default,,0000,0000,0000,,Biće puno žutoperki, jej.
Dialogue: 0,0:03:30.66,0:03:32.01,Default,,0000,0000,0000,,Još jednom!
Dialogue: 0,0:03:32.01,0:03:32.75,Default,,0000,0000,0000,,Pa...
Dialogue: 0,0:03:33.99,0:03:38.44,Default,,0000,0000,0000,,Tokom moje suspenzije, jesi li se bar malo zbližio sa Minorin?
Dialogue: 0,0:03:39.59,0:03:41.61,Default,,0000,0000,0000,,Ništa se nije desilo, zar ne?
Dialogue: 0,0:03:41.61,0:03:46.66,Default,,0000,0000,0000,,Stvarno, šta si uradio sa ovom prilikom koju sam ti napravila?
Dialogue: 0,0:03:46.66,0:03:49.30,Default,,0000,0000,0000,,A-Ali nisam imao načina...
Dialogue: 0,0:03:49.30,0:03:53.27,Default,,0000,0000,0000,,Kada tebe nema, Kušieda ne dolazi da se nađe sa tobom na onom mestu ujutru,
Dialogue: 0,0:03:53.27,0:03:55.43,Default,,0000,0000,0000,,i ruča sa nekim drugim devojkama.
Dialogue: 0,0:03:55.43,0:03:57.31,Default,,0000,0000,0000,,A onda, posle škole je zauzeta klubom{\fscx300}-
Dialogue: 0,0:03:57.31,0:04:00.06,Default,,0000,0000,0000,,"Jesi li ti neki verni pas koji čeka svog gospodara da se vrati kući?"
Dialogue: 0,0:04:00.37,0:04:05.49,Default,,0000,0000,0000,,"Da li stvarno misliš da će Minorin doći po tebe ako budeš čekao dovoljno dugo?"
Dialogue: 0,0:04:05.49,0:04:07.61,Default,,0000,0000,0000,,"Budalo. Idiote. Glupi psu. Glupi Rjuđi."
Dialogue: 0,0:04:08.23,0:04:09.90,Default,,0000,0000,0000,,To sam sve nameravala da ti kažem...
Dialogue: 0,0:04:10.18,0:04:11.99,Default,,0000,0000,0000,,Pa upravo si mi rekla, zar ne?
Dialogue: 0,0:04:11.99,0:04:15.07,Default,,0000,0000,0000,,Pa, pretpostavljam da je normalno što se ništa nije dogodilo.
Dialogue: 0,0:04:15.07,0:04:17.34,Default,,0000,0000,0000,,U redu, ja ću ti smisliti plan.
Dialogue: 0,0:04:17.34,0:04:17.74,Default,,0000,0000,0000,,Ha?
Dialogue: 0,0:04:17.96,0:04:24.37,Default,,0000,0000,0000,,Božić je, pa ću biti ponovo rođena kao anđeo ljubavi da ti pomognem.
Dialogue: 0,0:04:24.82,0:04:27.07,Default,,0000,0000,0000,,T-To je tako pogrešno.
Dialogue: 0,0:04:27.07,0:04:30.28,Default,,0000,0000,0000,,Pričaj šta hoćeš, sada sam živa svetica.
Dialogue: 0,0:04:30.28,0:04:33.16,Default,,0000,0000,0000,,Svetica? Mislio sam da si anđeo?
Dialogue: 0,0:04:33.16,0:04:34.83,Default,,0000,0000,0000,,Ma, anđeo, anđeo.
Dialogue: 0,0:04:34.83,0:04:39.06,Default,,0000,0000,0000,,Kako bih svima omogućila srećan i radostan Božić,
Dialogue: 0,0:04:39.06,0:04:43.32,Default,,0000,0000,0000,,spremna sam da skinem nešto odeće sa sebe ili čak sve!
Dialogue: 0,0:04:43.32,0:04:44.94,Default,,0000,0000,0000,,Prepusti sve meni!
Dialogue: 0,0:04:46.59,0:04:48.93,Default,,0000,0000,0000,,Pa, da li izgledam kao anđeo?
Dialogue: 0,0:04:49.94,0:04:51.16,Default,,0000,0000,0000,,Ne,
Dialogue: 0,0:04:51.16,0:04:53.08,Default,,0000,0000,0000,,i mrvice ti padaju po kosi.
Dialogue: 0,0:04:53.08,0:04:55.78,Default,,0000,0000,0000,,Ne! Skini ih!
Dialogue: 0,0:04:57.56,0:04:59.22,Default,,0000,0000,0000,,Taiga je došla!
Dialogue: 0,0:04:59.22,0:05:00.95,Default,,0000,0000,0000,,Taiga se vratila u školu!
Dialogue: 0,0:05:01.15,0:05:04.10,Default,,0000,0000,0000,,Taiga, zahvalni smo za tvoj trud!
Dialogue: 0,0:05:04.92,0:05:06.21,Default,,0000,0000,0000,,Šta je sa vama?
Dialogue: 0,0:05:06.55,0:05:11.05,Default,,0000,0000,0000,,Mi smo postali tvoji obožavatelji kada smo videli onu borbu.
Dialogue: 0,0:05:11.05,0:05:12.98,Default,,0000,0000,0000,,Borba između šefice i Mini Tigrice...
Dialogue: 0,0:05:12.98,0:05:14.92,Default,,0000,0000,0000,,To je bila tvoja pobeda, zar ne?!
Dialogue: 0,0:05:15.45,0:05:17.70,Default,,0000,0000,0000,,Vodila si prvu i poslednju bitku protiv nje za svoju ljubav...
Dialogue: 0,0:05:17.70,0:05:20.34,Default,,0000,0000,0000,,...jer si otkrila da ide da studira preko, zar ne?
Dialogue: 0,0:05:22.13,0:05:23.63,Default,,0000,0000,0000,,Tišina!
Dialogue: 0,0:05:23.63,0:05:27.63,Default,,0000,0000,0000,,Ta borba je bila teška i izazvala puno problema.
Dialogue: 0,0:05:27.63,0:05:31.13,Default,,0000,0000,0000,,Ali, pobednica je ona koja je zadnja stajala na nogama.
Dialogue: 0,0:05:31.13,0:05:31.88,Default,,0000,0000,0000,,Drugim rečima...
Dialogue: 0,0:05:31.88,0:05:35.72,Default,,0000,0000,0000,,Ja sam istinska pobednica!
Dialogue: 0,0:05:37.95,0:05:40.30,Default,,0000,0000,0000,,Hajde, nemoj da se zavitlavaš.
Dialogue: 0,0:05:40.30,0:05:41.70,Default,,0000,0000,0000,,Idemo, Taiga.
Dialogue: 0,0:05:42.65,0:05:47.83,Default,,0000,0000,0000,,Moja napeta butina...
Dialogue: 0,0:05:48.15,0:05:53.05,Default,,0000,0000,0000,,moji listovi koji se tresu...
Dialogue: 0,0:05:52.04,0:05:53.87,Default-alt,,0000,0000,0000,,Š-Šta se dešava?
Dialogue: 0,0:05:54.27,0:05:57.37,Default,,0000,0000,0000,,Minorin, vratila sam se u školu!
Dialogue: 0,0:05:57.37,0:06:00.18,Default,,0000,0000,0000,,Prekini da pevaš čudne pesme i daj mi veliki zagrljaj!
Dialogue: 0,0:06:00.51,0:06:03.22,Default,,0000,0000,0000,,Pusti me! Ja sam ljudsko biće!
Dialogue: 0,0:06:03.89,0:06:07.26,Default,,0000,0000,0000,,Minorin, nedostajala si mi!
Dialogue: 0,0:06:07.26,0:06:10.64,Default,,0000,0000,0000,,Zašto nas nisi čekala na uobičajnom mestu?
Dialogue: 0,0:06:10.64,0:06:15.05,Default,,0000,0000,0000,,Da budem iskrena, jutros sam se uspavala pa sam morala da trčim ovamo.
Dialogue: 0,0:06:15.05,0:06:16.40,Default,,0000,0000,0000,,Zato me bole noge.
Dialogue: 0,0:06:16.72,0:06:20.84,Default,,0000,0000,0000,,Čekaj, kako sam onda ja stigla pre vas?
Dialogue: 0,0:06:20.84,0:06:21.74,Default,,0000,0000,0000,,P-Pa...
Dialogue: 0,0:06:21.74,0:06:26.26,Default,,0000,0000,0000,,Dole nas je okružila gomila čudnih likova.
Dialogue: 0,0:06:26.26,0:06:27.78,Default,,0000,0000,0000,,Nego, Kušieda{\fscx300}-
Dialogue: 0,0:06:27.78,0:06:28.78,Default,,0000,0000,0000,,Ućuti, derište!
Dialogue: 0,0:06:32.17,0:06:33.37,Default,,0000,0000,0000,,Zašto sam to rekla?
Dialogue: 0,0:06:33.37,0:06:35.68,Default,,0000,0000,0000,,Jesam li napravila lošu šalu?
Dialogue: 0,0:06:35.68,0:06:37.74,Default,,0000,0000,0000,,Dovraga! Zeznula sam!
Dialogue: 0,0:06:37.74,0:06:39.38,Default,,0000,0000,0000,,Izvini! Zaboravi da sam rekla to!
Dialogue: 0,0:06:41.34,0:06:42.67,Default,,0000,0000,0000,,Oj, Takasu.
Dialogue: 0,0:06:42.67,0:06:44.60,Default,,0000,0000,0000,,A, Taiga, davno se nismo videli.
Dialogue: 0,0:06:44.60,0:06:46.80,Default,,0000,0000,0000,,Kako je, šta ima?
Dialogue: 0,0:06:46.80,0:06:47.22,Default,,0000,0000,0000,,Ha?
Dialogue: 0,0:06:47.51,0:06:49.43,Default,,0000,0000,0000,,Kušieda je opet prsla?
Dialogue: 0,0:06:50.09,0:06:54.50,Default,,0000,0000,0000,,Trebala bih da se zamonašim zbog takve greške.
Dialogue: 0,0:06:54.50,0:06:57.40,Default,,0000,0000,0000,,Pustite me bar da budem ćelava neko vreme.
Dialogue: 0,0:06:57.86,0:06:58.51,Default,,0000,0000,0000,,Ne...
Dialogue: 0,0:06:58.51,0:07:03.57,Default,,0000,0000,0000,,Zašto želiš da provodiš svoj radosni srednjoškolski život noseći ćelavu periku?
Dialogue: 0,0:07:03.57,0:07:06.95,Default,,0000,0000,0000,,Aisaka!
Dialogue: 0,0:07:10.15,0:07:12.19,Default,,0000,0000,0000,,Š-Šta je sada ovo?
Dialogue: 0,0:07:12.19,0:07:13.62,Default,,0000,0000,0000,,Dobro jutro, Aisaka.
Dialogue: 0,0:07:13.62,0:07:17.48,Default,,0000,0000,0000,,K-Kitamura, d-d-dobro jutro...
Dialogue: 0,0:07:15.46,0:07:16.78,Default-alt,,0000,0000,0000,,Takasu, i tebi dobro jutro.
Dialogue: 0,0:07:16.93,0:07:18.76,Default-alt,,0000,0000,0000,,Z-Zašto?
Dialogue: 0,0:07:18.76,0:07:22.12,Default,,0000,0000,0000,,Jutro je, pa zato govorim "Dobro jutro."
Dialogue: 0,0:07:22.12,0:07:23.74,Default,,0000,0000,0000,,Ne! Mislim na tu pozu!
Dialogue: 0,0:07:23.74,0:07:25.30,Default,,0000,0000,0000,,Ah, ovo je...
Dialogue: 0,0:07:25.53,0:07:26.71,Default,,0000,0000,0000,,...moje divljenje!
Dialogue: 0,0:07:26.71,0:07:27.51,Default,,0000,0000,0000,,Tvoje...
Dialogue: 0,0:07:27.70,0:07:29.02,Default,,0000,0000,0000,,Ja joj se apsolutno divim!
Dialogue: 0,0:07:29.44,0:07:33.73,Default,,0000,0000,0000,,Moja osećanja prema Aisaki ne mogu biti izražena samo klečanjem,
Dialogue: 0,0:07:33.73,0:07:35.20,Default,,0000,0000,0000,,pa zato ležim.
Dialogue: 0,0:07:37.02,0:07:37.98,Default,,0000,0000,0000,,Aisaka!
Dialogue: 0,0:07:37.98,0:07:39.13,Default,,0000,0000,0000,,Da?
Dialogue: 0,0:07:39.13,0:07:43.51,Default,,0000,0000,0000,,Bez obzira za koga to činiš, ne bi trebala više da se tučeš.
Dialogue: 0,0:07:44.69,0:07:49.29,Default,,0000,0000,0000,,Ako ne možeš da oprostiš nekome, prvo popričaj sa mnom o tome.
Dialogue: 0,0:07:56.70,0:07:59.41,Default,,0000,0000,0000,,I onda sam videla to svojim očima,
Dialogue: 0,0:07:59.41,0:08:00.01,Default,,0000,0000,0000,,Da.
Dialogue: 0,0:08:00.01,0:08:04.24,Default,,0000,0000,0000,,Mislim, on je zamenik profesora ali videla sam ga kako izlazi iz kazina!
Dialogue: 0,0:08:04.84,0:08:06.44,Default,,0000,0000,0000,,Oh, to potvrđuje stvari.
Dialogue: 0,0:08:06.44,0:08:11.02,Default,,0000,0000,0000,,Nije kasnio na sastanak zbog svog posla već zato što se kockao na automatima!
Dialogue: 0,0:08:11.35,0:08:15.65,Default,,0000,0000,0000,,Da, pa sam onda poslala poruku jednoj mojoj drugarici...
Dialogue: 0,0:08:15.65,0:08:21.68,Default,,0000,0000,0000,,Pitala sam je šta da radim, pošto se on prema meni odnosi tako loše.
Dialogue: 0,0:08:21.68,0:08:22.72,Default,,0000,0000,0000,,Oh...
Dialogue: 0,0:08:22.72,0:08:25.51,Default,,0000,0000,0000,,Onda sam otkrila nešto drugo.
Dialogue: 0,0:08:25.51,0:08:26.87,Default,,0000,0000,0000,,Kakav zapanjujuć razvoj situacije...
Dialogue: 0,0:08:27.08,0:08:30.89,Default,,0000,0000,0000,,Izgleda da ne postoji zanimanje "zamenik profesora."
Dialogue: 0,0:08:30.89,0:08:33.13,Default,,0000,0000,0000,,Postoji samo nešto zvano "zamenik nastavnika."
Dialogue: 0,0:08:33.13,0:08:34.58,Default,,0000,0000,0000,,To znači...
Dialogue: 0,0:08:34.58,0:08:36.79,Default,,0000,0000,0000,,Lagao je o svom poslu!
Dialogue: 0,0:08:37.28,0:08:40.70,Default,,0000,0000,0000,,Od tada mi se više nije javio.
Dialogue: 0,0:08:45.83,0:08:49.01,Default,,0000,0000,0000,,Šta to radiš, rasplakao si nam razrednu, Kitamura?
Dialogue: 0,0:08:49.22,0:08:52.78,Default,,0000,0000,0000,,Hajde da se pravimo da ne znamo da je to zapravo Juri.
Dialogue: 0,0:08:52.78,0:08:58.03,Default,,0000,0000,0000,,"Podršku vašoj ljubavi" vam je priredio Kitamura Jusaku, Zaštitnik slomljenih srca.
Dialogue: 0,0:08:52.78,0:08:53.85,Default-alt,,0000,0000,0000,,Aha...
Dialogue: 0,0:08:58.31,0:09:01.68,Default,,0000,0000,0000,,Naš gost danas je osoba J.
Dialogue: 0,0:08:58.75,0:09:01.68,Default-alt,,0000,0000,0000,,Zaštitnik Slomljenih Srca? Šta je to?
Dialogue: 0,0:09:01.68,0:09:06.91,Default,,0000,0000,0000,,A, zbog one izjave, Kitamura je postao svetac u ovoj školi{\fscx300}-
Dialogue: 0,0:09:06.91,0:09:11.61,Default,,0000,0000,0000,,Bolje reći, postao je religiozna figura za one koji žele da izjave ljubav nekome.
Dialogue: 0,0:09:11.61,0:09:12.16,Default,,0000,0000,0000,,Ha?
Dialogue: 0,0:09:12.52,0:09:15.72,Default,,0000,0000,0000,,Kažu da će Kitamura odneti svu lošu sreću.
Dialogue: 0,0:09:15.72,0:09:18.54,Default,,0000,0000,0000,,To je nešto kao "Legenda srećnog zaštitnika slomljenih srca."
Dialogue: 0,0:09:16.63,0:09:21.45,Default,,0000,0000,0000,,{\be1\an8}Da vas podsetim, završni testovi se bliže.
Dialogue: 0,0:09:18.75,0:09:20.75,Default,,0000,0000,0000,,To je baš glupo.
Dialogue: 0,0:09:20.75,0:09:23.93,Default,,0000,0000,0000,,Zašto ljudi u našoj školi toliko vole da veruju u legende?
Dialogue: 0,0:09:21.45,0:09:23.48,Default,,0000,0000,0000,,{\be1\an8}Narode, spremate li se?
Dialogue: 0,0:09:23.48,0:09:28.74,Default,,0000,0000,0000,,{\be1\an8}Ja, Zaštitnik slomljenih srca, bi takođe trebao da počnem da učim,
Dialogue: 0,0:09:25.26,0:09:28.13,Default,,0000,0000,0000,,Nekako me ovaj prenos baš nervira.
Dialogue: 0,0:09:28.91,0:09:31.64,Default,,0000,0000,0000,,{\be1\an8}ali ne ide sve kako ja želim.
Dialogue: 0,0:09:28.74,0:09:31.80,Default,,0000,0000,0000,,Zašto je pomenuo učenje za testove?
Dialogue: 0,0:09:31.80,0:09:34.67,Default,,0000,0000,0000,,Zar naslov nije trebao da bude "Podrška vašoj ljubavi"?
Dialogue: 0,0:09:34.67,0:09:37.08,Default,,0000,0000,0000,,Taiga sluša ovo, pa ućuti,
Dialogue: 0,0:09:37.08,0:09:40.37,Default,,0000,0000,0000,,inače neće moći da čuje dirljive priče Velikog učitelja Kitamure.
Dialogue: 0,0:09:40.37,0:09:41.86,Default,,0000,0000,0000,,Taiga, jel u redu? Možeš da čuješ?
Dialogue: 0,0:09:42.17,0:09:43.14,Default,,0000,0000,0000,,Ha?
Dialogue: 0,0:09:43.14,0:09:45.51,Default,,0000,0000,0000,,Da, u redu je.
Dialogue: 0,0:09:46.77,0:09:49.95,Default,,0000,0000,0000,,Ali Taiga je danas nekako baš pristojna.
Dialogue: 0,0:09:49.95,0:09:54.76,Default,,0000,0000,0000,,Da je kao i obično, razbacala bi stolove i stolice i ubila Harutu od batina.
Dialogue: 0,0:09:55.37,0:09:56.53,Default,,0000,0000,0000,,Primetili ste?
Dialogue: 0,0:09:56.53,0:09:58.95,Default,,0000,0000,0000,,Tako je, sada sam dobra.
Dialogue: 0,0:09:58.95,0:09:59.37,Default,,0000,0000,0000,,Dobra?
Dialogue: 0,0:09:59.85,0:10:03.55,Default,,0000,0000,0000,,Pa, dobra sam zato što se bliži Božić.
Dialogue: 0,0:10:03.55,0:10:06.24,Default,,0000,0000,0000,,Mislim, znate, Deda Mraz nas gleda.
Dialogue: 0,0:10:06.24,0:10:08.07,Default,,0000,0000,0000,,Aa, šta to pričaš?
Dialogue: 0,0:10:08.07,0:10:09.34,Default,,0000,0000,0000,,Jesi li glupa?
Dialogue: 0,0:10:09.34,0:10:14.12,Default,,0000,0000,0000,,Ne mogu da verujem da misliš da Deda Mraz postoji. To uopšte ne liči na tebe.
Dialogue: 0,0:10:14.12,0:10:16.35,Default,,0000,0000,0000,,Glupa čiuvavo, uskoro je Božić!
Dialogue: 0,0:10:16.64,0:10:20.65,Default,,0000,0000,0000,,Ako budeš takva kvarna, Deda Mraz neće posetiti tvoju kuću.
Dialogue: 0,0:10:21.57,0:10:23.69,Default,,0000,0000,0000,,Definitivno ima nešto čudno oko tebe.
Dialogue: 0,0:10:24.05,0:10:26.01,Default,,0000,0000,0000,,Da ti se nije desilo nešto tokom suspenzije?
Dialogue: 0,0:10:26.01,0:10:27.37,Default,,0000,0000,0000,,Ili je ovo znak pred smrt?
Dialogue: 0,0:10:27.37,0:10:29.07,Default,,0000,0000,0000,,Hoćeš li umreti sutra?
Dialogue: 0,0:10:29.07,0:10:31.23,Default,,0000,0000,0000,,Zašto bih ja umrla sutra?!
Dialogue: 0,0:10:31.23,0:10:33.06,Default,,0000,0000,0000,,Prekinite, vas dve!
Dialogue: 0,0:10:33.06,0:10:35.87,Default,,0000,0000,0000,,{\be1\an8}Hvala vam što ste slušali!
Dialogue: 0,0:10:35.87,0:10:37.02,Default,,0000,0000,0000,,{\be1\an8}Sledeće...
Dialogue: 0,0:10:37.02,0:10:41.03,Default,,0000,0000,0000,,Posle napornih ispita, dolazi Božić, vreme kojem se svi raduju!
Dialogue: 0,0:10:41.03,0:10:44.19,Default,,0000,0000,0000,,Pa tu imamo jednu objavu od strane studentskog saveta.
Dialogue: 0,0:10:44.19,0:10:50.30,Default,,0000,0000,0000,,Posle ceremonije na Badnje veče, održaćemo Božićnu zabavu u sali za fizičko.
Dialogue: 0,0:10:50.30,0:10:52.06,Default,,0000,0000,0000,,Na zabavu dolazite u parovima.
Dialogue: 0,0:10:52.06,0:10:56.22,Default,,0000,0000,0000,,Imate ljubavne brige? Ne možete da nju ili njega pitate da izađe sa vama?
Dialogue: 0,0:10:57.61,0:11:02.15,Default,,0000,0000,0000,,Zašto ne pozovete voljenu osobu na zabavu na to romantično veče?
Dialogue: 0,0:10:58.78,0:10:59.93,Default-alt,,0000,0000,0000,,Božićna...
Dialogue: 0,0:11:00.19,0:11:01.51,Default-alt,,0000,0000,0000,,Zabava?
Dialogue: 0,0:11:03.91,0:11:04.81,Default,,0000,0000,0000,,Slušaj, Rjuđi.
Dialogue: 0,0:11:05.01,0:11:06.36,Default,,0000,0000,0000,,Ovo ti je savršena prilika.
Dialogue: 0,0:11:06.79,0:11:09.40,Default,,0000,0000,0000,,Ti {\i1}moraš{\i0} da pozoveš Minorin na zabavu na Badnje veče.
Dialogue: 0,0:11:09.90,0:11:10.71,Default,,0000,0000,0000,,Ha?
Dialogue: 0,0:11:10.71,0:11:13.43,Default,,0000,0000,0000,,Nemoj ti meni "Ha?"  Moraš da joj izjaviš lljubav bez oklevanja!
Dialogue: 0,0:11:13.43,0:11:14.82,Default,,0000,0000,0000,,I-I-Izjavim ljubav?
Dialogue: 0,0:11:15.18,0:11:17.58,Default,,0000,0000,0000,,Nema šanse da ću to moći da učinim.
Dialogue: 0,0:11:17.58,0:11:18.63,Default,,0000,0000,0000,,Moraš to da učiniš.
Dialogue: 0,0:11:20.01,0:11:21.99,Default,,0000,0000,0000,,Badnje je veče.
Dialogue: 0,0:11:21.99,0:11:24.25,Default,,0000,0000,0000,,To je sveto veče pred Božić.
Dialogue: 0,0:11:25.55,0:11:28.00,Default,,0000,0000,0000,,Ja sam anđeo ljubavi!
Dialogue: 0,0:11:28.00,0:11:30.74,Default,,0000,0000,0000,,Ja predstavljam duh Božića i primer dobrog deteta.
Dialogue: 0,0:11:30.74,0:11:32.08,Default,,0000,0000,0000,,Čak me i Deda Mraz posmatra!
Dialogue: 0,0:11:32.08,0:11:32.72,Default,,0000,0000,0000,,Ha?
Dialogue: 0,0:11:33.02,0:11:36.57,Default,,0000,0000,0000,,Kako bih učinila tvoj ljubavni život uspešnim,
Dialogue: 0,0:11:36.57,0:11:38.85,Default,,0000,0000,0000,,postaću Kupidon!
Dialogue: 0,0:11:39.37,0:11:40.31,Default,,0000,0000,0000,,Neka, hvala.
Dialogue: 0,0:11:40.65,0:11:41.68,Default,,0000,0000,0000,,Hajde, hajde...
Dialogue: 0,0:11:42.38,0:11:43.58,Default,,0000,0000,0000,,H-Hej!
Dialogue: 0,0:11:43.58,0:11:44.62,Default,,0000,0000,0000,,Pa...
Dialogue: 0,0:11:45.58,0:11:48.00,Default,,0000,0000,0000,,Izgledam li kao Kupidon?
Dialogue: 0,0:11:49.40,0:11:51.24,Default,,0000,0000,0000,,Ne, ne izgledaš.
Dialogue: 0,0:11:51.94,0:11:53.22,Default,,0000,0000,0000,,Stvarno ne izgledaš.
Dialogue: 0,0:11:56.18,0:11:58.66,Default,,0000,0000,0000,,Bre, zar ne kasniš?
Dialogue: 0,0:12:00.18,0:12:03.67,Default,,0000,0000,0000,,Specijalna zabava za momke je ovamo...
Dialogue: 0,0:12:06.07,0:12:08.29,Default,,0000,0000,0000,,Srećan božić!
Dialogue: 0,0:12:08.62,0:12:10.48,Default,,0000,0000,0000,,Oh! Pogledaj, pogledaj, Nanako!
Dialogue: 0,0:12:10.48,0:12:12.72,Default,,0000,0000,0000,,Onaj momak tamo je stvarno sladak!
Dialogue: 0,0:12:12.72,0:12:17.12,Default,,0000,0000,0000,,Uopšte mi ne smetaju takvi kul momci!
Dialogue: 0,0:12:17.12,0:12:20.53,Default,,0000,0000,0000,,Ah, kakav džentlmen.
Dialogue: 0,0:12:20.53,0:12:24.77,Default,,0000,0000,0000,,Ima još puno vremena, pa ako si gladan, posluži se ovime!
Dialogue: 0,0:12:24.77,0:12:27.23,Default,,0000,0000,0000,,Ha? Gde ideš?
Dialogue: 0,0:12:27.23,0:12:28.23,Default,,0000,0000,0000,,Šta si rekao?
Dialogue: 0,0:12:28.23,0:12:30.15,Default,,0000,0000,0000,,Jesam li ja toliko nezanimljiva?
Dialogue: 0,0:12:30.63,0:12:34.58,Default,,0000,0000,0000,,Božić je i čekala sam te da se zabavimo...
Dialogue: 0,0:12:34.58,0:12:37.19,Default,,0000,0000,0000,,Tako je, hajde da se zabavimo!
Dialogue: 0,0:12:37.19,0:12:38.32,Default,,0000,0000,0000,,Skidajmo se!
Dialogue: 0,0:12:38.32,0:12:39.97,Default,,0000,0000,0000,,Mi smo se skinuli!
Dialogue: 0,0:12:39.97,0:12:42.41,Default,,0000,0000,0000,,Šta? Neko još slađi?
Dialogue: 0,0:12:42.41,0:12:45.83,Default,,0000,0000,0000,,Znači želiš slađeg i zgodnijeg Deda Mraza?
Dialogue: 0,0:12:45.83,0:12:48.96,Default,,0000,0000,0000,,Govoriš li to o meni?!
Dialogue: 0,0:12:49.58,0:12:51.34,Default,,0000,0000,0000,,I to je san koji sam sanjao.
Dialogue: 0,0:12:51.57,0:12:53.59,Default,,0000,0000,0000,,Kakav perverznjak. Najgori si.
Dialogue: 0,0:12:53.59,0:12:55.09,Default,,0000,0000,0000,,Pobogu, Haruta...
Dialogue: 0,0:12:55.32,0:12:58.09,Default,,0000,0000,0000,,Čekaj, zar nisam tu ja najgore prošao?
Dialogue: 0,0:12:58.09,0:12:59.41,Default,,0000,0000,0000,,Pustimo to...
Dialogue: 0,0:12:59.41,0:13:01.40,Default,,0000,0000,0000,,Hajde da pričamo o pravoj zabavi.
Dialogue: 0,0:13:01.40,0:13:03.43,Default,,0000,0000,0000,,Prvo, moramo da odredimo ko će pomgatati u pripremi.
Dialogue: 0,0:13:03.69,0:13:05.07,Default,,0000,0000,0000,,Taiga, što ti ne probaš?
Dialogue: 0,0:13:05.07,0:13:06.81,Default,,0000,0000,0000,,Rekla si da voliš Božić, zar ne?
Dialogue: 0,0:13:06.81,0:13:08.19,Default,,0000,0000,0000,,Da, dobra ideja.
Dialogue: 0,0:13:08.52,0:13:13.11,Default,,0000,0000,0000,,A-Ako me svi misle da bih trebala, p-pretpostavljam da ću morati.
Dialogue: 0,0:13:13.78,0:13:16.14,Default,,0000,0000,0000,,Pridruži mi se, ti šećerni-golaću-psu!
Dialogue: 0,0:13:16.14,0:13:17.44,Default,,0000,0000,0000,,A-Aha.
Dialogue: 0,0:13:17.44,0:13:19.74,Default,,0000,0000,0000,,Čekaj, kakav si to pas rekla da sam?
Dialogue: 0,0:13:19.74,0:13:22.38,Default,,0000,0000,0000,,Minorin, i ti nam se pridruži!
Dialogue: 0,0:13:22.38,0:13:23.54,Default,,0000,0000,0000,,Izvini.
Dialogue: 0,0:13:23.92,0:13:26.55,Default,,0000,0000,0000,,Ovaj put ću propustiti to.
Dialogue: 0,0:13:26.55,0:13:27.57,Default,,0000,0000,0000,,Zašto?
Dialogue: 0,0:13:27.57,0:13:31.77,Default,,0000,0000,0000,,Nisam baš raspoložena za Božićnu žurku.
Dialogue: 0,0:13:31.77,0:13:34.05,Default,,0000,0000,0000,,Mislim, nije vreme za mene da se zabavljam.
Dialogue: 0,0:13:34.23,0:13:36.15,Default,,0000,0000,0000,,Šta je bilo, Kušieda?
Dialogue: 0,0:13:36.15,0:13:40.24,Default,,0000,0000,0000,,Napravila sam neverovatnu grešku tokom softbol utakmice,
Dialogue: 0,0:13:40.24,0:13:43.67,Default,,0000,0000,0000,,pa smo zbog toga izgubili od slabijeg protivnika.
Dialogue: 0,0:13:43.67,0:13:45.86,Default,,0000,0000,0000,,Stvarno se stidim.
Dialogue: 0,0:13:45.86,0:13:49.37,Default,,0000,0000,0000,,Ako posle toga odem i zabavim se na zabavi,
Dialogue: 0,0:13:49.37,0:13:52.53,Default,,0000,0000,0000,,mislim da me ostali iz kluba više neće poštovati.
Dialogue: 0,0:13:52.53,0:13:55.86,Default,,0000,0000,0000,,Takođe, moram da vežbam za utakmicu koju imamo posle nove godine.
Dialogue: 0,0:13:55.86,0:13:57.24,Default,,0000,0000,0000,,Minorin...
Dialogue: 0,0:13:58.54,0:14:02.38,Default,,0000,0000,0000,,N-Ne moraš da pomažeš, samo dođi na zabavu i{\fscx300}-
Dialogue: 0,0:14:02.38,0:14:03.58,Default,,0000,0000,0000,,Neću ići na zabavu.
Dialogue: 0,0:14:05.05,0:14:08.25,Default,,0000,0000,0000,,Onda ću možda ja da vam pomognem.
Dialogue: 0,0:14:08.94,0:14:10.24,Default,,0000,0000,0000,,Ami, ti ćeš?
Dialogue: 0,0:14:10.24,0:14:11.40,Default,,0000,0000,0000,,Onda ću i ja da pomognem!
Dialogue: 0,0:14:11.40,0:14:13.54,Default,,0000,0000,0000,,Stvarno se radujem toj zabavi!
Dialogue: 0,0:14:14.15,0:14:16.63,Default,,0000,0000,0000,,Zagrejaćemo atmosferu snagom odeljenja 2-C!
Dialogue: 0,0:14:18.53,0:14:19.58,Default,,0000,0000,0000,,Ohoo.
Dialogue: 0,0:14:19.58,0:14:21.19,Default,,0000,0000,0000,,Kakav je to pogled?
Dialogue: 0,0:14:21.19,0:14:23.28,Default,,0000,0000,0000,,Ne želiš da budeš sa mnom?
Dialogue: 0,0:14:23.28,0:14:25.34,Default,,0000,0000,0000,,Reći ću ti nešto, Takasu.
Dialogue: 0,0:14:25.34,0:14:28.51,Default,,0000,0000,0000,,U tvom je interesu da budeš dobar prema meni.
Dialogue: 0,0:14:28.51,0:14:29.60,Default,,0000,0000,0000,,Zašto?
Dialogue: 0,0:14:29.60,0:14:33.03,Default,,0000,0000,0000,,Ovakva vrsta plana je moja specijalnost.
Dialogue: 0,0:14:33.03,0:14:34.74,Default,,0000,0000,0000,,Od mene će zavisiti da li će žurka biti uspeh ili ne,
Dialogue: 0,0:14:34.74,0:14:40.24,Default,,0000,0000,0000,,i takođe je na meni da dovedem tu neku snuždenu osobu na zabavu.
Dialogue: 0,0:14:42.77,0:14:44.89,Default,,0000,0000,0000,,Ha? Šta je bilo?
Dialogue: 0,0:14:44.89,0:14:46.86,Default,,0000,0000,0000,,Ipak želiš da nam se pridružiš?
Dialogue: 0,0:14:46.86,0:14:49.23,Default,,0000,0000,0000,,U tom slučaju, rado te primamo.
Dialogue: 0,0:14:49.23,0:14:51.00,Default,,0000,0000,0000,,Rekla sam da neću.
Dialogue: 0,0:14:52.09,0:14:53.13,Default,,0000,0000,0000,,Minorin!
Dialogue: 0,0:14:53.48,0:14:55.48,Default,,0000,0000,0000,,Čekaj, Minorin!
Dialogue: 0,0:14:57.79,0:15:00.34,Default,,0000,0000,0000,,Ha? Rju, izlaziš?
Dialogue: 0,0:15:00.94,0:15:02.83,Default,,0000,0000,0000,,I Taiga ide sa tobom?
Dialogue: 0,0:15:02.83,0:15:05.67,Default,,0000,0000,0000,,Tako je, idemo da učimo za završne ispite.
Dialogue: 0,0:15:05.67,0:15:08.57,Default,,0000,0000,0000,,Nalazimo se sa Kitamurom i drugima u restoranu gde uvek idemo.
Dialogue: 0,0:15:08.57,0:15:12.92,Default,,0000,0000,0000,,Imaš nešto lososa u tiganju, seti se da ga zagreješ pre nego što jedeš.
Dialogue: 0,0:15:12.92,0:15:16.73,Default,,0000,0000,0000,,Ah... biću giza usamljena gansu!
Dialogue: 0,0:15:16.73,0:15:20.52,Default,,0000,0000,0000,,Š-Šta je sa tim "giza" i "gansu"?
Dialogue: 0,0:15:20.52,0:15:22.07,Default,,0000,0000,0000,,Rju, ne znaš?
Dialogue: 0,0:15:22.55,0:15:24.18,Default,,0000,0000,0000,,To je popularno sada.
Dialogue: 0,0:15:24.18,0:15:26.77,Default,,0000,0000,0000,,Nova radnica na poslu me je naučila.
Dialogue: 0,0:15:26.77,0:15:30.36,Default,,0000,0000,0000,,Mladi govore stvari kao "gansu",
Dialogue: 0,0:15:30.36,0:15:32.50,Default,,0000,0000,0000,,a "giza" zvuči slatko, zar ne?
Dialogue: 0,0:15:32.76,0:15:36.39,Default,,0000,0000,0000,,Ja sam giza-giza pametna!
Dialogue: 0,0:15:34.50,0:15:36.39,Default-alt,,0000,0000,0000,,Prekni više.
Dialogue: 0,0:15:36.39,0:15:37.67,Default,,0000,0000,0000,,Zvuči stvarno pogrešno.
Dialogue: 0,0:15:37.92,0:15:40.49,Default,,0000,0000,0000,,Kako zvuči pogrešno?
Dialogue: 0,0:15:40.49,0:15:44.89,Default,,0000,0000,0000,,To je giza-dobro! To je tera-tačno!
Dialogue: 0,0:15:42.98,0:15:44.89,Default-alt,,0000,0000,0000,,Inko, postaraj sa za Jasuko umesto mene.
Dialogue: 0,0:15:45.37,0:15:47.96,Default,,0000,0000,0000,,Ti si jedina na koju mogu da se oslonim.
Dialogue: 0,0:15:51.02,0:15:51.89,Default,,0000,0000,0000,,Nema šanse!
Dialogue: 0,0:15:51.89,0:15:55.93,Default,,0000,0000,0000,,Ne! Ne! Ne! Ne!
Dialogue: 0,0:15:52.06,0:15:54.37,Default-alt,,0000,0000,0000,,Kakva buntovna reakcija!
Dialogue: 0,0:15:54.37,0:15:55.93,Default-alt,,0000,0000,0000,,Šta se dešava, Inko?
Dialogue: 0,0:15:55.93,0:15:59.75,Default,,0000,0000,0000,,Gde je nestala tvoja slatka i iskrena strana?
Dialogue: 0,0:15:59.75,0:16:01.56,Default,,0000,0000,0000,,A, znam.
Dialogue: 0,0:16:01.56,0:16:04.07,Default,,0000,0000,0000,,Mora da je do ove knjige što si doneo.
Dialogue: 0,0:16:08.16,0:16:09.57,Default,,0000,0000,0000,,Izvini, Inko!
Dialogue: 0,0:16:09.57,0:16:10.89,Default,,0000,0000,0000,,Ja sam učinio nešto nesmotreno!
Dialogue: 0,0:16:10.89,0:16:13.50,Default,,0000,0000,0000,,Tebe nikada nećemo skuvati!
Dialogue: 0,0:16:13.50,0:16:14.63,Default,,0000,0000,0000,,Obećavam!
Dialogue: 0,0:16:14.63,0:16:16.58,Default,,0000,0000,0000,,S-Stvarno?
Dialogue: 0,0:16:16.58,0:16:17.59,Default,,0000,0000,0000,,Naravno!
Dialogue: 0,0:16:17.87,0:16:19.69,Default,,0000,0000,0000,,O-Ozbiljno?
Dialogue: 0,0:16:19.69,0:16:21.09,Default,,0000,0000,0000,,Ne lažem te!
Dialogue: 0,0:16:23.74,0:16:25.59,Default,,0000,0000,0000,,Šta vi to radite?
Dialogue: 0,0:16:26.87,0:16:29.53,Default,,0000,0000,0000,,Hej, jesi li ih poneo?
Dialogue: 0,0:16:29.53,0:16:31.96,Default,,0000,0000,0000,,Naravno. Ovde su.
Dialogue: 0,0:16:31.96,0:16:34.85,Default,,0000,0000,0000,,Nagrada sa festivala za pobedu na takmičenju za Srećnog momka...
Dialogue: 0,0:16:34.85,0:16:36.31,Default,,0000,0000,0000,,Zovu ih "Šeficine beleške."
Dialogue: 0,0:16:36.56,0:16:39.44,Default,,0000,0000,0000,,Nemamo čega da se plašimo ako ih budemo koristili za učenje.
Dialogue: 0,0:16:41.71,0:16:46.77,Default,,0000,0000,0000,,Ali, da budem iskren, ovo pripada i Kušiedi.
Dialogue: 0,0:16:48.28,0:16:50.17,Default,,0000,0000,0000,,Ipak smo zajedno pobedili.
Dialogue: 0,0:16:50.87,0:16:54.65,Default,,0000,0000,0000,,Rekla je da ne može da dođe zbog posla, tako da tu nema pomoći.
Dialogue: 0,0:16:55.18,0:16:58.50,Default,,0000,0000,0000,,Prekini da živiš u prošlosti kao neki penzioner.
Dialogue: 0,0:16:58.50,0:16:59.89,Default,,0000,0000,0000,,Ja ne živim u{\fscx300}-
Dialogue: 0,0:16:59.89,0:17:01.70,Default,,0000,0000,0000,,Onda prekini da stojiš tu.
Dialogue: 0,0:17:01.70,0:17:05.37,Default,,0000,0000,0000,,Učićemo na mestu gde Minorin radi,
Dialogue: 0,0:17:05.37,0:17:09.10,Default,,0000,0000,0000,,tako da bi trebao da proćaskaš sa njom pre nego što ostali stignu.
Dialogue: 0,0:17:11.41,0:17:12.92,Default,,0000,0000,0000,,D-Da!
Dialogue: 0,0:17:14.10,0:17:15.77,Default,,0000,0000,0000,,Kušieda je uzela slobodan dan.
Dialogue: 0,0:17:16.21,0:17:19.25,Default,,0000,0000,0000,,Kada ste spremni da naručite, pritisnite dugme.
Dialogue: 0,0:17:20.61,0:17:21.94,Default,,0000,0000,0000,,Hej, Rjuđi.
Dialogue: 0,0:17:22.63,0:17:24.85,Default,,0000,0000,0000,,Misliš li da te Minorin izbegava?
Dialogue: 0,0:17:24.85,0:17:26.03,Default,,0000,0000,0000,,Z-Zašto bi?!
Dialogue: 0,0:17:26.03,0:17:28.34,Default,,0000,0000,0000,,Uopšte ne pričate jedno sa drugim u školi,
Dialogue: 0,0:17:28.34,0:17:30.43,Default,,0000,0000,0000,,i ja sam bila ta koja ju je pozvala da učimo zajedno.
Dialogue: 0,0:17:30.43,0:17:33.54,Default,,0000,0000,0000,,To je zato što si mi ti rekla da ti sve prepustim.
Dialogue: 0,0:17:33.54,0:17:36.17,Default,,0000,0000,0000,,Dobro onda, pričate li vas dvoje uopšte?
Dialogue: 0,0:17:36.17,0:17:38.11,Default,,0000,0000,0000,,N-Ne...
Dialogue: 0,0:17:38.11,0:17:40.50,Default,,0000,0000,0000,,"Idem na posao" je bio izgovor,
Dialogue: 0,0:17:40.94,0:17:43.29,Default,,0000,0000,0000,,i rekla je da neće doći na zabavu.
Dialogue: 0,0:17:43.29,0:17:46.51,Default,,0000,0000,0000,,Pa, to je zato što je potištena zbog greške koju je napravila na utakmici.
Dialogue: 0,0:17:46.81,0:17:51.00,Default,,0000,0000,0000,,Zar nije tvoja specijalnost da poboljšaš situaciju u ovakvim prilikama?!
Dialogue: 0,0:17:51.00,0:17:52.14,Default,,0000,0000,0000,,Ali...
Dialogue: 0,0:17:52.55,0:17:54.86,Default,,0000,0000,0000,,Stvarno je čudno.
Dialogue: 0,0:17:54.86,0:17:57.73,Default,,0000,0000,0000,,Više ne znam kako da te podržim.
Dialogue: 0,0:17:58.19,0:18:01.27,Default,,0000,0000,0000,,Tvoj odnos sa Minorin izgleda drugačije nego ranije.
Dialogue: 0,0:18:01.88,0:18:03.70,Default,,0000,0000,0000,,Pre ste više bili...
Dialogue: 0,0:18:04.47,0:18:06.74,Default,,0000,0000,0000,,Jo, Takasu i Taiga,
Dialogue: 0,0:18:06.97,0:18:08.37,Default,,0000,0000,0000,,Izvinite što ste čekali.
Dialogue: 0,0:18:08.37,0:18:09.45,Default,,0000,0000,0000,,Gladan sam.
Dialogue: 0,0:18:09.45,0:18:10.98,Default,,0000,0000,0000,,A-Aha...
Dialogue: 0,0:18:10.98,0:18:11.76,Default,,0000,0000,0000,,Jo.
Dialogue: 0,0:18:12.32,0:18:14.48,Default,,0000,0000,0000,,Današ je baš hladno.
Dialogue: 0,0:18:14.48,0:18:17.57,Default,,0000,0000,0000,,Trebao bi da nosiš zimski kaput, on te baš ugreje na ovakve dane!
Dialogue: 0,0:18:17.57,0:18:18.75,Default,,0000,0000,0000,,Maruo, trebao bi da kupiš jedan za sebe.
Dialogue: 0,0:18:19.09,0:18:20.12,Default,,0000,0000,0000,,Kihara?
Dialogue: 0,0:18:20.40,0:18:22.64,Default,,0000,0000,0000,,Otkud ti ovde? To ne liči na tebe.
Dialogue: 0,0:18:22.64,0:18:25.69,Default,,0000,0000,0000,,I ja želim kopiju Šeficinih beleški!
Dialogue: 0,0:18:25.69,0:18:28.02,Default,,0000,0000,0000,,A ne mogu sama da se nateram da učim...
Dialogue: 0,0:18:28.02,0:18:29.43,Default,,0000,0000,0000,,Hajde da sednemo.
Dialogue: 0,0:18:29.43,0:18:31.72,Default,,0000,0000,0000,,U redu, ovaj sto je naš.
Dialogue: 0,0:18:31.72,0:18:32.89,Default,,0000,0000,0000,,Hej, Taiga, ustaj.
Dialogue: 0,0:18:34.02,0:18:35.53,Default,,0000,0000,0000,,Haruta, idi tamo.
Dialogue: 0,0:18:35.53,0:18:37.10,Default,,0000,0000,0000,,U redu.
Dialogue: 0,0:18:37.31,0:18:39.03,Default,,0000,0000,0000,,Kihara, ti sediš pored Takasua.
Dialogue: 0,0:18:39.03,0:18:39.80,Default,,0000,0000,0000,,Čekaj...
Dialogue: 0,0:18:39.80,0:18:41.00,Default,,0000,0000,0000,,Izvoli, izvoli.
Dialogue: 0,0:18:41.00,0:18:43.77,Default,,0000,0000,0000,,Ja ću sesti pored Harute, a ti, Kitamura, sediš za drugim stolom.
Dialogue: 0,0:18:44.46,0:18:47.28,Default,,0000,0000,0000,,Č-Čekaj! I ja hoću da sedim tamo!
Dialogue: 0,0:18:49.99,0:18:51.71,Default,,0000,0000,0000,,Ne, pa, ovaj...
Dialogue: 0,0:18:51.71,0:18:53.57,Default,,0000,0000,0000,,Devojke bi trebale da sede zajedno!
Dialogue: 0,0:18:53.57,0:18:55.96,Default,,0000,0000,0000,,Zar ne, Taiga? Hajdemo tako.
Dialogue: 0,0:18:55.96,0:18:57.84,Default,,0000,0000,0000,,Nemoj da si tako sebična.
Dialogue: 0,0:18:57.84,0:18:59.88,Default,,0000,0000,0000,,Zar ti se baš toliko ne sedi pored Takasua?
Dialogue: 0,0:18:59.88,0:19:01.95,Default,,0000,0000,0000,,Ne, nije u tome stvar!
Dialogue: 0,0:19:01.95,0:19:03.36,Default,,0000,0000,0000,,Hajde da naručimo sada.
Dialogue: 0,0:19:03.36,0:19:04.88,Default,,0000,0000,0000,,Svi ćete nešto da pijete?
Dialogue: 0,0:19:04.88,0:19:05.90,Default,,0000,0000,0000,,U redu.
Dialogue: 0,0:19:05.90,0:19:09.57,Default,,0000,0000,0000,,Nema svrhe da svi ustaju po pića, pa ću ja doneti svima.
Dialogue: 0,0:19:09.57,0:19:12.18,Default,,0000,0000,0000,,J-Ja želim nešto vruće!
Dialogue: 0,0:19:12.18,0:19:13.07,Default,,0000,0000,0000,,U redu.
Dialogue: 0,0:19:13.07,0:19:15.60,Default,,0000,0000,0000,,Taiga, idi sa njime po pića.
Dialogue: 0,0:19:17.95,0:19:19.35,Default,,0000,0000,0000,,Hladno je danas, zar ne?
Dialogue: 0,0:19:19.88,0:19:22.87,Default,,0000,0000,0000,,Hej, šta to smeraš?
Dialogue: 0,0:19:23.55,0:19:24.98,Default,,0000,0000,0000,,O čemu to govoriš?
Dialogue: 0,0:19:24.98,0:19:26.51,Default,,0000,0000,0000,,Nemoj da se praviš glup!
Dialogue: 0,0:19:26.51,0:19:29.61,Default,,0000,0000,0000,,Zašto namerno uparuješ Taigu i Kitamuru?
Dialogue: 0,0:19:29.61,0:19:30.69,Default,,0000,0000,0000,,A, provaljeni smo.
Dialogue: 0,0:19:31.12,0:19:34.54,Default,,0000,0000,0000,,Pa, dobro, hteo sam i ti da nam pomogneš.
Dialogue: 0,0:19:34.54,0:19:35.41,Default,,0000,0000,0000,,Ha?
Dialogue: 0,0:19:35.70,0:19:40.26,Default,,0000,0000,0000,,Mislim da bi Kitamura i Taiga bili dobar par.
Dialogue: 0,0:19:40.26,0:19:41.62,Default,,0000,0000,0000,,Aha, i ja mislim tako.
Dialogue: 0,0:19:41.62,0:19:44.94,Default,,0000,0000,0000,,Vidiš, Kitamura je verovatno još snužden pošto ga je predsednica odbila, zar ne?
Dialogue: 0,0:19:44.94,0:19:48.39,Default,,0000,0000,0000,,Zar ne misliš da će ga nova ljubav izlečiti?
Dialogue: 0,0:19:48.39,0:19:50.59,Default,,0000,0000,0000,,M-Moglo bi biti tako.
Dialogue: 0,0:19:50.99,0:19:53.49,Default,,0000,0000,0000,,Taigi se sviđa Kitamura.
Dialogue: 0,0:19:53.49,0:19:55.27,Default,,0000,0000,0000,,Siguran sam.
Dialogue: 0,0:19:55.27,0:19:59.17,Default,,0000,0000,0000,,Mislim da ti, Takasu, nisi uopšte primetio.
Dialogue: 0,0:19:59.17,0:20:02.56,Default,,0000,0000,0000,,Iznenađen si, zar ne? I ja sam bio iznenađen.
Dialogue: 0,0:20:02.92,0:20:07.78,Default,,0000,0000,0000,,Pogotovo što si joj ti bio najbliži jer si se starao za nju.
Dialogue: 0,0:20:07.78,0:20:10.96,Default,,0000,0000,0000,,Da, normalno je što si iznenađen.
Dialogue: 0,0:20:10.96,0:20:11.91,Default,,0000,0000,0000,,Niste u pravu.
Dialogue: 0,0:20:12.49,0:20:14.26,Default,,0000,0000,0000,,Ha? Šta?
Dialogue: 0,0:20:16.40,0:20:18.37,Default,,0000,0000,0000,,N-Ništa.
Dialogue: 0,0:20:20.13,0:20:21.48,Default,,0000,0000,0000,,U pravu su.
Dialogue: 0,0:20:23.84,0:20:25.94,Default,,0000,0000,0000,,Neverovatno!
Dialogue: 0,0:20:25.94,0:20:27.49,Default,,0000,0000,0000,,Taiga, izgleda da ti se stvarno sviđa ovo.
Dialogue: 0,0:20:27.49,0:20:29.33,Default,,0000,0000,0000,,Aha, predivno je!
Dialogue: 0,0:20:30.17,0:20:32.38,Default,,0000,0000,0000,,Taigi se sviđa Kitamura.
Dialogue: 0,0:20:32.84,0:20:36.52,Default,,0000,0000,0000,,To sam znao odavno, zar ne?
Dialogue: 0,0:20:38.80,0:20:41.52,Default,,0000,0000,0000,,Ali zašto sam ja...
Dialogue: 0,0:20:43.83,0:20:45.13,Default,,0000,0000,0000,,Hej, Takasu.
Dialogue: 0,0:20:43.83,0:20:45.13,Default-alt,,0000,0000,0000,,Ne razumem.
Dialogue: 0,0:20:45.43,0:20:47.02,Default,,0000,0000,0000,,Hej!
Dialogue: 0,0:20:49.70,0:20:51.79,Default,,0000,0000,0000,,Takasu, šta ti misliš?
Dialogue: 0,0:20:51.79,0:20:55.61,Default,,0000,0000,0000,,Da li misliš da bi se Taiga i Maruo slagali ako bi počeli da izlaze?
Dialogue: 0,0:20:57.01,0:20:58.49,Default,,0000,0000,0000,,Ne, ovaj...
Dialogue: 0,0:20:58.77,0:21:01.51,Default,,0000,0000,0000,,U stvari, nekako bi bilo iznenada.
Dialogue: 0,0:21:01.51,0:21:02.95,Default,,0000,0000,0000,,Tako je! Slažeš se, zar ne?
Dialogue: 0,0:21:03.34,0:21:05.96,Default,,0000,0000,0000,,Čak iako svi pričaju da jeste, ipak nije tako, zar ne?
Dialogue: 0,0:21:06.15,0:21:07.19,Default,,0000,0000,0000,,Čekaj trenutak.
Dialogue: 0,0:21:07.19,0:21:08.75,Default,,0000,0000,0000,,Kako to misliš "svi"?
Dialogue: 0,0:21:08.75,0:21:12.88,Default,,0000,0000,0000,,I ti sigurno misliš da neće biti interesantno ako Taiga bude izlazila sa Maruom, zar ne?
Dialogue: 0,0:21:13.13,0:21:14.20,Default,,0000,0000,0000,,Ha?
Dialogue: 0,0:21:14.20,0:21:18.63,Default,,0000,0000,0000,,Svi kažu da si ljbazan i da voliš da se brineš za druge,
Dialogue: 0,0:21:17.47,0:21:18.10,Default-alt,,0000,0000,0000,,Ček{\fscx300}-
Dialogue: 0,0:21:18.63,0:21:22.81,Default,,0000,0000,0000,,ali tebi se zapravo sviđa Taiga, zar ne?
Dialogue: 0,0:21:23.12,0:21:26.39,Default,,0000,0000,0000,,Ja te podržavam, iskreno!
Dialogue: 0,0:21:27.86,0:21:30.80,Default,,0000,0000,0000,,Nemoj mi reći da se tebi sviđa Kitamu{\fscx300}-
Dialogue: 0,0:21:30.80,0:21:32.73,Default,,0000,0000,0000,,Hej, Kihara!
Dialogue: 0,0:21:32.73,0:21:35.06,Default,,0000,0000,0000,,Požuri.
Dialogue: 0,0:21:35.06,0:21:36.89,Default,,0000,0000,0000,,Idem!
Dialogue: 0,0:21:36.89,0:21:40.24,Default,,0000,0000,0000,,Takasu, ne odustaj!
Dialogue: 0,0:21:40.60,0:21:41.63,Default,,0000,0000,0000,,Hajde!
Dialogue: 0,0:21:41.63,0:21:44.95,Default,,0000,0000,0000,,Dosadni ste! Jesam li rekla da dolazim!
Dialogue: 0,0:21:50.89,0:21:54.09,Default,,0000,0000,0000,,Ovo su neki super zbunjujući Gans en Rouzez.
Dialogue: 0,0:23:25.62,0:23:27.03,Default,,0000,0000,0000,,Sigurno će biti zabavno!
Dialogue: 0,0:23:27.03,0:23:28.18,Default,,0000,0000,0000,,Razveseliće te!
Dialogue: 0,0:23:28.18,0:23:30.77,Default,,0000,0000,0000,,Zato moraš da dođeš na zabavu, Kušieda.
Dialogue: 0,0:23:30.95,0:23:32.71,Default,,0000,0000,0000,,Više ne mogu da budem kakva sam bila.
Dialogue: 0,0:23:32.71,0:23:33.78,Default,,0000,0000,0000,,Da, sigurno...
Dialogue: 0,0:23:33.78,0:23:34.42,Default,,0000,0000,0000,,Verovatno...
