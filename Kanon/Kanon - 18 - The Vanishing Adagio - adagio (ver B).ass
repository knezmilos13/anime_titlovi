Dialogue: 0,0:00:00.56,0:00:02.34,Default,Alarm,0000,0000,0000,,Ju{\fscx125}~{\r}tro{\fscx125}~
Dialogue: 0,0:00:02.34,0:00:04.36,Default,Alarm,0000,0000,0000,,Jutro{\fscx125}~{\r}je{\fscx125}~
Dialogue: 0,0:00:11.31,0:00:12.90,Default,Aki,0000,0000,0000,,Dobro jutro.
Dialogue: 0,0:00:14.04,0:00:16.10,Default,Yuu,0000,0000,0000,,Ah, dobro jutro.
Dialogue: 0,0:00:16.10,0:00:18.88,Default,Ayu,0000,0000,0000,,Juići, ne izgledaš baš najbolje.
Dialogue: 0,0:00:18.88,0:00:20.66,Default,Yuu,0000,0000,0000,,Ma ja sam energičan kao i uvek.
Dialogue: 0,0:00:20.91,0:00:23.31,Default,Ayu,0000,0000,0000,,Uopšte ne izgleda tako.
Dialogue: 0,0:00:24.38,0:00:26.38,Default,Aki,0000,0000,0000,,Spremiću ti tost sada.
Dialogue: 0,0:02:17.18,0:02:18.82,Default,Shi,0000,0000,0000,,Dobro jutro!
Dialogue: 0,0:02:18.82,0:02:23.67,Default,Shi,0000,0000,0000,,Izvini, bila sam toliko srećna kada sam te videla da sam prosto morala da potrčim.
Dialogue: 0,0:02:24.69,0:02:26.39,Default,Yuu,0000,0000,0000,,Aha, dobro jutro!
Dialogue: 0,0:02:26.36,0:02:29.86,Titles,,0000,0000,0000,,{\pos(640,200)}Epizoda 18
Dialogue: 0,0:02:26.36,0:02:29.86,Titles,,0000,0000,0000,,{\pos(640,314)}Nestajući adađo
Dialogue: 0,0:02:30.06,0:02:32.50,Default,Yuu,0000,0000,0000,,Jesi li i danas spremila ručak?
Dialogue: 0,0:02:32.50,0:02:34.01,Default,Shi,0000,0000,0000,,Da, i ispao je odlično.
Dialogue: 0,0:02:34.27,0:02:36.37,Default,Yuu,0000,0000,0000,,Hoćemo li onda opet da ručamo zajedno?
Dialogue: 0,0:02:36.37,0:02:37.27,Default,Shi,0000,0000,0000,,Da!
Dialogue: 0,0:02:37.27,0:02:40.81,Default,Shi,0000,0000,0000,,Kada se završi četvrti čas, doći ću do tvoje učionice{\fscx200}-
Dialogue: 0,0:02:42.21,0:02:45.59,Default,Shi,0000,0000,0000,,Kada razmislim, hajde bolje da se nađemo u menzi.
Dialogue: 0,0:02:45.59,0:02:47.02,Default,Yuu,0000,0000,0000,,Istina...
Dialogue: 0,0:02:53.38,0:02:54.69,Default,Yuu,0000,0000,0000,,Tražio sam te.
Dialogue: 0,0:02:55.68,0:02:59.66,Default,Kao,0000,0000,0000,,Kada sam ovde, čini mi se kao da se vreme zaustavilo.
Dialogue: 0,0:03:00.54,0:03:03.08,Default,Kao,0000,0000,0000,,Iako vreme nikako ne može da stane.
Dialogue: 0,0:03:03.30,0:03:06.52,Default,Yuu,0000,0000,0000,,Ne izgledaš baš najbolje. Spavaš li kako treba?
Dialogue: 0,0:03:08.52,0:03:11.55,Default,Kao,0000,0000,0000,,Ono mesto je pusto tokom zime,
Dialogue: 0,0:03:12.03,0:03:16.48,Default,Kao,0000,0000,0000,,ali kada se sneg otopi i dođe proleće, dvorište će biti ispunjeno žamorom učenika.{ep 17}
Dialogue: 0,0:03:17.32,0:03:21.54,Default,Yuu,0000,0000,0000,,Znači ipak si znala da je Šiori svaki dan dolazila tamo.
Dialogue: 0,0:03:26.20,0:03:27.69,Default,Shi,0000,0000,0000,,Rođendanska zabava?{ep 17}
Dialogue: 0,0:03:27.91,0:03:31.19,Default,Yuu,0000,0000,0000,,Da. Ali ako je ti ne želiš, onda nema veze.
Dialogue: 0,0:03:31.19,0:03:33.64,Default,Shi,0000,0000,0000,,Uopšte nije tako! Srećna sam!
Dialogue: 0,0:03:34.14,0:03:36.78,Default,Shi,0000,0000,0000,,Ali, ko bi još mogao da dođe?
Dialogue: 0,0:03:37.01,0:03:41.06,Default,Yuu,0000,0000,0000,,Recimo Aju, i mislio sam da pozovem još par mojih prijatelja.
Dialogue: 0,0:03:41.41,0:03:43.38,Default,Yuu,0000,0000,0000,,Pa, ipak bi to bila skromna zabava.
Dialogue: 0,0:03:43.79,0:03:45.49,Default,Shi,0000,0000,0000,,Tako znači...
Dialogue: 0,0:03:46.54,0:03:49.41,Default,Shi,0000,0000,0000,,Hvala ti. Radovaću se tome.
Dialogue: 0,0:03:52.05,0:03:53.45,Default,Shi,0000,0000,0000,,Jesi li dobro?
Dialogue: 0,0:03:53.45,0:03:56.05,Default,Yuu,0000,0000,0000,,Stvarno sam se prejeo.
Dialogue: 0,0:03:56.05,0:03:59.95,Default,Shi,0000,0000,0000,,Izvini. Ipak sam spakovala previše.
Dialogue: 0,0:03:59.95,0:04:01.23,Default,Yuu,0000,0000,0000,,U redu je!
Dialogue: 0,0:04:01.23,0:04:03.86,Default,Yuu,0000,0000,0000,,Bilo je toliko ukusno da mi se prosto nije ostavljalo ništa.
Dialogue: 0,0:04:09.08,0:04:09.98,Default,Yuu,0000,0000,0000,,Šiori.
Dialogue: 0,0:04:10.20,0:04:11.88,Default,Yuu,0000,0000,0000,,Hajde da odemo sa popodnevnih časova.
Dialogue: 0,0:04:12.76,0:04:15.82,Default,Yuu,0000,0000,0000,,Možemo bilo gde. Hajdemo negde gde se tebi ide.
Dialogue: 0,0:04:15.82,0:04:16.91,Default,Yuu,0000,0000,0000,,Dok još možeš.
Dialogue: 0,0:04:19.13,0:04:21.06,Default,Shi,0000,0000,0000,,Otkud to, iznenada?
Dialogue: 0,0:04:21.06,0:04:22.38,Default,Yuu,0000,0000,0000,,Ah, pa...
Dialogue: 0,0:04:22.38,0:04:26.69,Default,Shi,0000,0000,0000,,Kažeš to kao da uskoro više nećemo moći da se viđamo.
Dialogue: 0,0:04:28.33,0:04:34.39,Default,Shi,0000,0000,0000,,Stvarno si loš momak, pokušavaš da navedeš mlađe učenike da beže sa časova sa tobom, Juići.
Dialogue: 0,0:04:34.39,0:04:38.13,Default,Yuu,0000,0000,0000,,Pokušao sam da te privučem na tamnu stranu, ali izgleda da sam omanuo.
Dialogue: 0,0:04:40.15,0:04:43.12,Default,Shi,0000,0000,0000,,Pa, ja se sada vraćam u svoju učionicu.
Dialogue: 0,0:04:43.12,0:04:45.04,Default,Yuu,0000,0000,0000,,Aha. Vidimo se opet posle časova.
Dialogue: 0,0:04:45.04,0:04:45.88,Default,Shi,0000,0000,0000,,Da!
Dialogue: 0,0:04:50.07,0:04:52.34,Default,Shi,0000,0000,0000,,Baš je lepo.{ep 17}
Dialogue: 0,0:04:52.95,0:04:56.25,Default,Yuu,0000,0000,0000,,Zalasci sunca nisu ništa neobično.
Dialogue: 0,0:04:56.25,0:04:59.43,Default,Shi,0000,0000,0000,,Ali ipak, postoji nešto što se zove "atmosfera".
Dialogue: 0,0:04:59.43,0:05:01.95,Default,Yuu,0000,0000,0000,,Stvari koje devojke pričaju nemaju smisla.
Dialogue: 0,0:05:02.74,0:05:04.40,Default,Shi,0000,0000,0000,,Zaslepljujuće je.
Dialogue: 0,0:05:05.25,0:05:08.62,Default,Ayu,0000,0000,0000,,Stvarno? Sutra je Šiorin rođendan?
Dialogue: 0,0:05:08.62,0:05:13.08,Default,Yuu,0000,0000,0000,,Zapravo je prekosutra, ali joj taj dan ne odgovara baš.
Dialogue: 0,0:05:13.30,0:05:14.79,Default,Yuu,0000,0000,0000,,Zato će biti sutra.
Dialogue: 0,0:05:15.01,0:05:17.28,Default,Nay,0000,0000,0000,,Ko je ta Šiori?
Dialogue: 0,0:05:17.28,0:05:19.28,Default,Nay,0000,0000,0000,,Učenica iz naše škole?
Dialogue: 0,0:05:19.28,0:05:23.59,Default,Yuu,0000,0000,0000,,Da. Bolešljiva je i ne dolazi često u školu, pa nema puno prijatelja.
Dialogue: 0,0:05:23.59,0:05:25.56,Default,Yuu,0000,0000,0000,,Zato sam mislio barem mi da dođemo.
Dialogue: 0,0:05:25.56,0:05:27.48,Default,Ayu,0000,0000,0000,,Meni će biti drago!
Dialogue: 0,0:05:27.48,0:05:28.67,Default,Ayu,0000,0000,0000,,A ti, Najuki?
Dialogue: 0,0:05:28.67,0:05:31.19,Default,Nay,0000,0000,0000,,Imam trening, ali mogu da dođem nakratko.
Dialogue: 0,0:05:31.40,0:05:34.95,Default,Nay,0000,0000,0000,,Uskoro je maraton, pa neću moći dugo da ostanem.
Dialogue: 0,0:05:34.95,0:05:36.20,Default,Yuu,0000,0000,0000,,Dovoljno je i toliko.
Dialogue: 0,0:05:36.20,0:05:36.90,Default,Yuu,0000,0000,0000,,Hvala ti.
Dialogue: 0,0:05:41.78,0:05:43.16,Default,Yuu,0000,0000,0000,,Tu si, znači.
Dialogue: 0,0:05:44.00,0:05:47.02,Default,Yuu,0000,0000,0000,,Danas je poslednji dan kada Šiori može da dođe u školu.
Dialogue: 0,0:05:47.02,0:05:50.79,Default,Yuu,0000,0000,0000,,Posle sutrašnjeg rođendana, biće ili u bolnici ili u krevetu kod kuće.
Dialogue: 0,0:05:51.52,0:05:53.37,Default,Yuu,0000,0000,0000,,Više neće moći da izlazi napolje, zar ne?
Dialogue: 0,0:05:53.37,0:05:54.63,Default,Kao,0000,0000,0000,,Ne želim to da slušam.
Dialogue: 0,0:05:54.99,0:05:56.98,Default,Yuu,0000,0000,0000,,Nameravam da joj priredim rođendansku zabavu!
Dialogue: 0,0:05:57.20,0:05:58.84,Default,Yuu,0000,0000,0000,,Želim da i ti dođeš!
Dialogue: 0,0:06:00.84,0:06:03.57,Default,Yuu,0000,0000,0000,,Danas, posle časova, u Hjakaji.
Dialogue: 0,0:06:03.57,0:06:04.92,Default,Kao,0000,0000,0000,,Ja neću doći.
Dialogue: 0,0:06:04.92,0:06:08.32,Default,Yuu,0000,0000,0000,,Kaori, ona sada živi svoj život punim plućima.
Dialogue: 0,0:06:08.32,0:06:11.87,Default,Yuu,0000,0000,0000,,Više nije bitno koliko vremena joj je ostalo.
Dialogue: 0,0:06:13.29,0:06:16.96,Default,Yuu,0000,0000,0000,,Zar je do samog kraja nećeš prihvatiti kao mlađu sestru?
Dialogue: 0,0:06:19.05,0:06:22.64,Default,Yuu,0000,0000,0000,,Znaš li zašto je Šiori dolazila ovamo svaki dan?
Dialogue: 0,0:06:22.64,0:06:25.76,Default,Yuu,0000,0000,0000,,Želela je sa tobom da ruča ovde.
Dialogue: 0,0:06:27.35,0:06:29.43,Default,Yuu,0000,0000,0000,,Čuo sam da ste obećale to.
Dialogue: 0,0:06:29.43,0:06:32.80,Default,Yuu,0000,0000,0000,,Da ćete ručati ovde zajedno kada se ona upiše u ovu školu.
Dialogue: 0,0:06:34.40,0:06:36.75,Default,Yuu,0000,0000,0000,,Ona se tome radovala.
Dialogue: 0,0:06:37.32,0:06:39.97,Default,Yuu,0000,0000,0000,,Da ide u školu sa svojom sestrom,
Dialogue: 0,0:06:39.97,0:06:42.53,Default,Yuu,0000,0000,0000,,da ruča zajedno sa sestrom,
Dialogue: 0,0:06:42.53,0:06:45.09,Default,Yuu,0000,0000,0000,,da šeta posle škole sa sestrom.
Dialogue: 0,0:06:45.54,0:06:47.85,Default,Yuu,0000,0000,0000,,Čeznula je za tim običnim stvarima.
Dialogue: 0,0:06:49.65,0:06:51.89,Default,Yuu,0000,0000,0000,,Čekaćemo te, dođi!
Dialogue: 0,0:06:54.02,0:06:55.12,Default,Shi,0000,0000,0000,,Juići!
Dialogue: 0,0:06:56.01,0:06:58.02,Default,Yuu,0000,0000,0000,,Ah, presvukla si se?
Dialogue: 0,0:06:58.02,0:07:00.75,Default,Shi,0000,0000,0000,,Da, pošto su se časovi završili ranije.
Dialogue: 0,0:07:00.75,0:07:03.07,Default,Shi,0000,0000,0000,,Torba bi mi samo smetala.
Dialogue: 0,0:07:03.07,0:07:05.40,Default,Yuu,0000,0000,0000,,Davno te nisam video u tome.
Dialogue: 0,0:07:07.40,0:07:09.38,Default,Shi,0000,0000,0000,,Malo sam nervozna.
Dialogue: 0,0:07:09.38,0:07:11.91,Default,Yuu,0000,0000,0000,,Ne brini. To su sve dobri ljudi.
Dialogue: 0,0:07:14.41,0:07:15.42,Default,Kit,0000,0000,0000,,Aizava!
Dialogue: 0,0:07:15.87,0:07:17.00,Default,Kit,0000,0000,0000,,Ovamo, ovamo!
Dialogue: 0,0:07:17.00,0:07:18.40,Default,Ayu,0000,0000,0000,,Šiori!
Dialogue: 0,0:07:41.91,0:07:44.52,Default,All,0000,0000,0000,,Srećan rođendan, Šiori!
Dialogue: 0,0:07:45.49,0:07:48.61,Default,Shi,0000,0000,0000,,Ovaj, mnogo vam hvala.
Dialogue: 0,0:07:48.83,0:07:50.57,Default,Yuu,0000,0000,0000,,Hajde, oduvaj svećice. {ep 17}
Dialogue: 0,0:07:51.29,0:07:52.20,Default,Shi,0000,0000,0000,,Aha.
Dialogue: 0,0:07:55.95,0:07:57.25,Default,Yuu,0000,0000,0000,,Bravo!
Dialogue: 0,0:07:55.01,0:07:56.97,Default-alt,All,0000,0000,0000,,Srećan rođendan!
Dialogue: 0,0:07:58.58,0:07:59.77,Default-alt,All,0000,0000,0000,,Srećan rođendan!
Dialogue: 0,0:08:01.43,0:08:05.98,Default,Nay,0000,0000,0000,,Znači Šiori je ta koja je došla po tebe pre neki dan.
Dialogue: 0,0:08:05.98,0:08:08.82,Default,Kit,0000,0000,0000,,Znao sam da sam negde video to lice.
Dialogue: 0,0:08:09.17,0:08:12.18,Default,Kit,0000,0000,0000,,Ti si ona devojka koja je ranije stajala u dvorištu, zar ne?
Dialogue: 0,0:08:12.18,0:08:15.52,Default,Yuu,0000,0000,0000,,A da, ti si taj koji ju je prvu primetio dole.
Dialogue: 0,0:08:15.52,0:08:19.55,Default,Kit,0000,0000,0000,,Tako je! A ti si je prvi ugrabio, bez moje dozvole!
Dialogue: 0,0:08:19.55,0:08:21.61,Default,Yuu,0000,0000,0000,,Nemoj, pogrešno će te razumeti.
Dialogue: 0,0:08:21.61,0:08:26.59,Default,Kit,0000,0000,0000,,Šiori, Minase, i ovaj... Cukimija Aju beše?
Dialogue: 0,0:08:26.59,0:08:27.19,Default,Ayu,0000,0000,0000,,Da!
Dialogue: 0,0:08:27.72,0:08:29.75,Default,Kit,0000,0000,0000,,Pa onda Šiorina drugarica iz odeljenja.
Dialogue: 0,0:08:30.33,0:08:34.42,Default,Kit,0000,0000,0000,,A blizak si i sa Kuratom i Kavasumi iz trećeg razreda, zar ne?
Dialogue: 0,0:08:35.19,0:08:37.80,Default,Kit,0000,0000,0000,,Stvarno si nezasit, je l' znaš?
Dialogue: 0,0:08:38.29,0:08:42.41,Default,Nay,0000,0000,0000,,Kitagava, Juići nema takve namere.
Dialogue: 0,0:08:42.41,0:08:43.70,Default,Ayu,0000,0000,0000,,"Takve namere?"
Dialogue: 0,0:08:38.51,0:08:39.93,Default-alt,Yuu,0000,0000,0000,,Šta to pričaš?
Dialogue: 0,0:08:39.93,0:08:40.65,Default-alt,Kit,0000,0000,0000,,Upoznaj me sa njima!
Dialogue: 0,0:08:40.65,0:08:41.75,Default-alt,Yuu,0000,0000,0000,,Ne lupetaj.
Dialogue: 0,0:08:41.75,0:08:42.83,Default-alt,Kit,0000,0000,0000,,Nokautiraću te ako nećeš!
Dialogue: 0,0:08:42.83,0:08:43.99,Default-alt,Yuu,0000,0000,0000,,Šta?
Dialogue: 0,0:08:44.52,0:08:45.87,Default-alt,Kit,0000,0000,0000,,Nokautiraću te.
Dialogue: 0,0:08:45.87,0:08:46.89,Default-alt,Yuu,0000,0000,0000,,Nemoj da si probao.
Dialogue: 0,0:08:46.89,0:08:48.31,Default,Nay,0000,0000,0000,,Izvoli.
Dialogue: 0,0:08:48.31,0:08:51.52,Default,Nay,0000,0000,0000,,Ovo je poklon od mene i moje mame.
Dialogue: 0,0:08:51.52,0:08:53.52,Default,Nay,0000,0000,0000,,To je domaći džem od jagoda.
Dialogue: 0,0:08:54.51,0:08:56.19,Default,Ayu,0000,0000,0000,,Ovo je od mene!
Dialogue: 0,0:08:56.19,0:09:00.56,Default,Ayu,0000,0000,0000,,Izvini, nisam imala vremena da izaberem odgovarajući poklon.
Dialogue: 0,0:09:00.56,0:09:02.33,Default,Yuu,0000,0000,0000,,Pa si ipak kupila taijaki?
Dialogue: 0,0:09:02.33,0:09:03.31,Default,Ayu,0000,0000,0000,,Uguu~
Dialogue: 0,0:09:03.31,0:09:04.78,Default,Girl,0000,0000,0000,,Ovaj je od mene.
Dialogue: 0,0:09:04.78,0:09:06.78,Default,Girl,0000,0000,0000,,Domaći kolačići.
Dialogue: 0,0:09:07.18,0:09:09.02,Default,Shi,0000,0000,0000,,Hvala vam puno.
Dialogue: 0,0:09:09.02,0:09:09.99,Default,Shi,0000,0000,0000,,Tako sam srećna.
Dialogue: 0,0:09:09.99,0:09:11.95,Default,Kit,0000,0000,0000,,Sve neki slatkiši.
Dialogue: 0,0:09:12.17,0:09:15.26,Default,Shi,0000,0000,0000,,Ja obožavam slatkiše.
Dialogue: 0,0:09:15.26,0:09:17.07,Default,Yuu,0000,0000,0000,,I to ne kaže samo da bi bila pristojna.
Dialogue: 0,0:09:17.07,0:09:19.62,Default,Yuu,0000,0000,0000,,Ipak je njena omiljena hrana sladoled.
Dialogue: 0,0:09:21.60,0:09:22.88,Default,Kit,0000,0000,0000,,Stvarno, ne šališ se?
Dialogue: 0,0:09:23.09,0:09:25.40,Default,Kit,0000,0000,0000,,Široi, tvoja ishrana uopšte nije dobro balansirana.
Dialogue: 0,0:09:25.40,0:09:26.50,Default,Waiter,0000,0000,0000,,Dobro došli!
Dialogue: 0,0:09:27.10,0:09:28.48,Default,Nay,0000,0000,0000,,Eh, Kaori?
Dialogue: 0,0:09:31.44,0:09:33.88,Default,Kit,0000,0000,0000,,Šta, i Kaori je bila pozvana?
Dialogue: 0,0:09:34.55,0:09:35.18,Default,Kit,0000,0000,0000,,Hej, Kaori.
Dialogue: 0,0:09:36.33,0:09:37.58,Default,Kit,0000,0000,0000,,Kaori?
Dialogue: 0,0:09:40.31,0:09:43.79,Default,Nay,0000,0000,0000,,Juići, znači pozvao si i Kaori.
Dialogue: 0,0:09:43.79,0:09:45.72,Default,Kit,0000,0000,0000,,Kaori, upoznaću te.
Dialogue: 0,0:09:45.72,0:09:48.10,Default,Kit,0000,0000,0000,,Ovo je glavna gošća danas, Šiori.
Dialogue: 0,0:09:48.10,0:09:50.22,Default,Kit,0000,0000,0000,,Ah, da, kako se preziva?
Dialogue: 0,0:09:50.58,0:09:54.62,Default,Yuu,0000,0000,0000,,U redu, sada kada smo svi tu, hajde da se zabavimo!
Dialogue: 0,0:10:04.10,0:10:07.26,Default,Nay,0000,0000,0000,,Ah, mogla sam ja to da uradim.
Dialogue: 0,0:10:07.26,0:10:08.12,Default,Shi,0000,0000,0000,,U redu je.
Dialogue: 0,0:10:09.20,0:10:10.14,Default,Shi,0000,0000,0000,,Izvoli.
Dialogue: 0,0:10:10.79,0:10:12.92,Default,Shi,0000,0000,0000,,Ako želiš, posluži se.
Dialogue: 0,0:10:12.92,0:10:14.04,Default,Kao,0000,0000,0000,,Hvala ti.
Dialogue: 0,0:10:14.25,0:10:17.30,Default,Nay,0000,0000,0000,,Ovdašnji parfet je jako ukusan.
Dialogue: 0,0:10:17.30,0:10:18.58,Default,Kao,0000,0000,0000,,Aha, posle.
Dialogue: 0,0:10:26.75,0:10:29.06,Default,Kit,0000,0000,0000,,Hej, kakva je ovo atmosfera?
Dialogue: 0,0:10:29.06,0:10:30.70,Default,Yuu,0000,0000,0000,,Objasniću ti kasnije.
Dialogue: 0,0:10:30.70,0:10:32.79,Default,Yuu,0000,0000,0000,,Molim te, učini nešto da raspališ zabavu.
Dialogue: 0,0:10:33.25,0:10:34.80,Default,Kit,0000,0000,0000,,Znači postoji neki razlog.
Dialogue: 0,0:10:35.17,0:10:36.05,Default,Kit,0000,0000,0000,,Razumem!
Dialogue: 0,0:10:42.39,0:10:45.83,Default,Kit,0000,0000,0000,,U redu! Jedna zabava ne može da prođe bez đuskanja!
Dialogue: 0,0:10:46.04,0:10:48.93,Default,Kit,0000,0000,0000,,Biće ovo revanš za onaj skorašnji školski bal.
Dialogue: 0,0:10:48.93,0:10:51.34,Default,Nay,0000,0000,0000,,Kitagava, nameravaš ovde da plešeš?
Dialogue: 0,0:10:51.34,0:10:52.33,Default,Kit,0000,0000,0000,,Ooo, da!
Dialogue: 0,0:10:52.33,0:10:56.40,Default,Waiter,0000,0000,0000,,Izvinite, ali smetate drugim mušterijama, pa...
Dialogue: 0,0:10:56.40,0:10:58.67,Default,Girl,0000,0000,0000,,U redu je, u redu je! Neka nas zabavi!
Dialogue: 0,0:10:58.67,0:11:00.39,Default,Girl,0000,0000,0000,,Kitagava, kul si!
Dialogue: 0,0:11:01.29,0:11:02.33,Default,Kit,0000,0000,0000,,Hvala vam!
Dialogue: 0,0:11:02.55,0:11:05.60,Default,Kit,0000,0000,0000,,I zato, Kaori, mogu li da dobijem tvoju ruku?
Dialogue: 0,0:11:05.81,0:11:07.81,Default,Kao,0000,0000,0000,,J-Ja ću se uzdržati.
Dialogue: 0,0:11:08.24,0:11:10.20,Default,Yuu,0000,0000,0000,,Šiori, što ti ne probaš?
Dialogue: 0,0:11:10.20,0:11:11.89,Default,Shi,0000,0000,0000,,Neka, ni ja ne bih!
Dialogue: 0,0:11:11.89,0:11:14.71,Default,Yuu,0000,0000,0000,,U redu, onda ću ja biti tvoj partner.
Dialogue: 0,0:11:14.71,0:11:15.43,Default,Kit,0000,0000,0000,,Ozbiljno?
Dialogue: 0,0:11:15.43,0:11:16.13,Default,Yuu,0000,0000,0000,,Ozbiljno.
Dialogue: 0,0:11:16.13,0:11:17.93,Default,Yuu,0000,0000,0000,,Nisi zadovoljan sa mnom?
Dialogue: 0,0:11:17.93,0:11:19.90,Default,Kit,0000,0000,0000,,Naravno da nisam zadovoljan.
Dialogue: 0,0:11:19.90,0:11:21.15,Default,Yuu,0000,0000,0000,,Nemoj da se uzdržavaš!
Dialogue: 0,0:11:25.79,0:11:26.95,Default,Kit,0000,0000,0000,,Pa dobro onda.
Dialogue: 0,0:11:36.38,0:11:37.25,Default,Girl,0000,0000,0000,,To! To!
Dialogue: 0,0:11:41.51,0:11:42.72,Default,Kit,0000,0000,0000,,Opa, opa.
Dialogue: 0,0:11:44.61,0:11:45.61,Default,Yuu,0000,0000,0000,,Gotovo.
Dialogue: 0,0:12:26.28,0:12:27.68,Default,Nay,0000,0000,0000,,Baš sam se postidela. {ep 17}
Dialogue: 0,0:12:28.09,0:12:30.43,Default,Yuu,0000,0000,0000,,Da, baš, a onoliko si se smejala?
Dialogue: 0,0:12:31.28,0:12:34.40,Default,Ayu,0000,0000,0000,,Jesi li dobro, Šiori? Nisi se umorila?
Dialogue: 0,0:12:34.40,0:12:36.00,Default,Shi,0000,0000,0000,,Ne, dobro sam.
Dialogue: 0,0:12:36.00,0:12:37.23,Default,Shi,0000,0000,0000,,Bilo je zabavno.
Dialogue: 0,0:12:37.44,0:12:38.86,Default,Shi,0000,0000,0000,,Bilo mi je lepo sa svima.
Dialogue: 0,0:12:44.36,0:12:47.93,Default,Nay,0000,0000,0000,,Široi, hajde sledeći put da ručamo zajedno.
Dialogue: 0,0:12:48.66,0:12:49.80,Default,Shi,0000,0000,0000,,Smem li?
Dialogue: 0,0:12:49.80,0:12:50.89,Default,Girl,0000,0000,0000,,Onda ću i ja.
Dialogue: 0,0:12:50.89,0:12:51.70,Default,Ayu,0000,0000,0000,,I ja!
Dialogue: 0,0:12:51.70,0:12:53.73,Default,Yuu,0000,0000,0000,,Ti ideš u drugu školu.
Dialogue: 0,0:12:53.73,0:12:54.66,Default,Ayu,0000,0000,0000,,Uguu~
Dialogue: 0,0:12:54.66,0:12:58.38,Default,Kit,0000,0000,0000,,I ja ću biti tu. Ne mogu da dozvolim da Aizava sve ugrabi.
Dialogue: 0,0:12:58.59,0:13:01.82,Default,Yuu,0000,0000,0000,,Rekao sam ti da ne pričaš takve stvari.
Dialogue: 0,0:13:01.82,0:13:03.30,Default,Kit,0000,0000,0000,,Zašto?
Dialogue: 0,0:13:03.30,0:13:06.52,Default,Kit,0000,0000,0000,,Zar prosto ne poželiš da izlaziš sa ovako slatkom devojkom?
Dialogue: 0,0:13:07.15,0:13:09.80,Default,Kao,0000,0000,0000,,Stvarno se ne razumeš u devojke, Aizava?
Dialogue: 0,0:13:13.55,0:13:15.02,Default,Yuu,0000,0000,0000,,Gledajte svoja posla.
Dialogue: 0,0:13:15.40,0:13:16.67,Default,Kao,0000,0000,0000,,Jesu moja posla.
Dialogue: 0,0:13:17.51,0:13:18.84,Default,Kao,0000,0000,0000,,Zato što je Šiori...
Dialogue: 0,0:13:20.55,0:13:21.65,Default,Kao,0000,0000,0000,,Šiori je...
Dialogue: 0,0:13:26.57,0:13:28.66,Default,Kao,0000,0000,0000,,...moja mlađa sestra.
Dialogue: 0,0:13:29.52,0:13:30.66,Default,All,0000,0000,0000,,Mlađa sestra?!
Dialogue: 0,0:13:30.66,0:13:32.07,Default,Kao,0000,0000,0000,,Zar ne, Šiori?
Dialogue: 0,0:13:33.09,0:13:34.12,Default,Shi,0000,0000,0000,,Seko...
Dialogue: 0,0:13:34.33,0:13:35.99,Default,Kit,0000,0000,0000,,Zašto nam nisi to rekla?
Dialogue: 0,0:13:36.41,0:13:37.61,Default,Kit,0000,0000,0000,,Nije valjda{\fscx200}-
Dialogue: 0,0:13:37.61,0:13:38.33,Default,Yuu,0000,0000,0000,,Ućuti.
Dialogue: 0,0:13:42.75,0:13:45.05,Default,Kao,0000,0000,0000,,Hajde da mi krenemo.
Dialogue: 0,0:13:45.05,0:13:46.36,Default,Ayu,0000,0000,0000,,A-Aha.
Dialogue: 0,0:13:46.36,0:13:47.97,Default,Nay,0000,0000,0000,,Tako je, ja imam trening.
Dialogue: 0,0:13:50.05,0:13:51.68,Default,Kao,0000,0000,0000,,Šiori, ovaj...
Dialogue: 0,0:13:59.24,0:14:01.48,Default,Kao,0000,0000,0000,,Hajde kasnije da se ispričamo.
Dialogue: 0,0:14:03.00,0:14:03.85,Default,Shi,0000,0000,0000,,Aha.
Dialogue: 0,0:14:04.26,0:14:06.74,Default,Kao,0000,0000,0000,,Aizava, postaraj se za moju sestru, molim te.
Dialogue: 0,0:14:06.74,0:14:07.44,Default,Yuu,0000,0000,0000,,Aha.
Dialogue: 0,0:14:21.39,0:14:24.07,Default,Shi,0000,0000,0000,,Hvala ti, Juići.
Dialogue: 0,0:14:25.24,0:14:27.68,Default,Shi,0000,0000,0000,,Tako sam srećna sada.
Dialogue: 0,0:14:28.78,0:14:30.51,Default,Yuu,0000,0000,0000,,Gde želiš sada da idemo?
Dialogue: 0,0:14:31.34,0:14:33.19,Default,Yuu,0000,0000,0000,,Imaš još vremena, zar ne?
Dialogue: 0,0:14:33.19,0:14:35.03,Default,Yuu,0000,0000,0000,,Praviću ti društvo gde god.
Dialogue: 0,0:14:35.03,0:14:35.93,Default,Shi,0000,0000,0000,,Da!
Dialogue: 0,0:14:36.14,0:14:36.94,Default,Shi,0000,0000,0000,,Opa!
Dialogue: 0,0:14:40.50,0:14:41.32,Default,Shi,0000,0000,0000,,Opa!
Dialogue: 0,0:14:55.95,0:14:57.95,Default,Yuu,0000,0000,0000,,Još uvek ne moraš da se vratiš kući?
Dialogue: 0,0:14:58.16,0:15:02.17,Default,Shi,0000,0000,0000,,Da, rekla sam roditeljima da ću se vratiti kasno danas.
Dialogue: 0,0:15:05.24,0:15:06.59,Default,Yuu,0000,0000,0000,,Počeo je da pada sneg.
Dialogue: 0,0:15:07.51,0:15:08.30,Default,Shi,0000,0000,0000,,Juići.
Dialogue: 0,0:15:11.18,0:15:12.97,Default,Shi,0000,0000,0000,,Možemo li da se držimo za ruke?
Dialogue: 0,0:15:14.69,0:15:15.64,Default,Shi,0000,0000,0000,,Ovaj...
Dialogue: 0,0:15:37.16,0:15:39.02,Default,Shi,0000,0000,0000,,Malo sam umorna.
Dialogue: 0,0:15:39.02,0:15:42.75,Default,Yuu,0000,0000,0000,,Istina, pošto sam te vukao na toliko mesta.
Dialogue: 0,0:15:42.75,0:15:45.67,Default,Shi,0000,0000,0000,,Poboljšala sam se u "Tresni krticu", zar ne?
Dialogue: 0,0:15:45.67,0:15:47.53,Default,Yuu,0000,0000,0000,,Da, imaš talenta.
Dialogue: 0,0:15:47.53,0:15:52.16,Default,Shi,0000,0000,0000,,Stvarno ne znam kako da ti se zahvalim.
Dialogue: 0,0:15:52.16,0:15:53.84,Default,Yuu,0000,0000,0000,,Nisam uradio ništa posebno.
Dialogue: 0,0:15:54.31,0:15:56.85,Default,Shi,0000,0000,0000,,Ti si jaka osoba.
Dialogue: 0,0:15:56.85,0:15:58.77,Default,Yuu,0000,0000,0000,,Ti si ta koja je jaka, Šiori.
Dialogue: 0,0:15:59.14,0:16:00.72,Default,Shi,0000,0000,0000,,Ne, nisam.
Dialogue: 0,0:16:01.73,0:16:05.23,Default,Shi,0000,0000,0000,,Jednom, ranije, isekla sam svoje vene.
Dialogue: 0,0:16:07.53,0:16:11.98,Default,Shi,0000,0000,0000,,Veče pošto smo se prvi put upoznali, koristeći skalpel.
Dialogue: 0,0:16:13.80,0:16:16.32,Default,Shi,0000,0000,0000,,Bio je to prvi dan trećeg tromesečja.
Dialogue: 0,0:16:17.61,0:16:23.16,Default,Shi,0000,0000,0000,,Ispratila sam sestru iz moje sobe, pa sam onda i ja izašla.
Dialogue: 0,0:16:23.83,0:16:28.61,Default,Shi,0000,0000,0000,,Sa ovim šalom kojeg sam retko nosila...
Dialogue: 0,0:16:29.60,0:16:33.43,Default,Shi,0000,0000,0000,,Ovaj šal mi je seka dala.
Dialogue: 0,0:16:33.43,0:16:35.25,Default,Shi,0000,0000,0000,,Pre tačno godinu dana.
Dialogue: 0,0:16:36.75,0:16:41.68,Default,Shi,0000,0000,0000,,Molila sam je za poklon, pa mi ga je dala jedan dan ranije.
Dialogue: 0,0:16:42.23,0:16:44.58,Default,Shi,0000,0000,0000,,Kupila sam skalpel u samoposluzi,
Dialogue: 0,0:16:45.08,0:16:48.78,Default,Shi,0000,0000,0000,,a kupila sam i razne druge stvari, iako mi nisu bile potrebne.
Dialogue: 0,0:16:50.35,0:16:56.97,Default,Shi,0000,0000,0000,,Dok sam na povratku kući uživala u svom poslednjem snegom zavejanom pejzažu, srela sam tebe i Aju.
Dialogue: 0,0:16:58.58,0:17:01.84,Default,Shi,0000,0000,0000,,Sećam se te večeri.
Dialogue: 0,0:17:03.22,0:17:05.32,Default,Shi,0000,0000,0000,,U svojoj sobi, sa ugašenim svetlima...
Dialogue: 0,0:17:05.81,0:17:06.79,Default,Shi,0000,0000,0000,,...skroz sama...
Dialogue: 0,0:17:08.50,0:17:14.29,Default,Shi,0000,0000,0000,,Nisam mogla ništa da čujem, ništa da vidim, niti o ičemu da razmišljam.
Dialogue: 0,0:17:15.20,0:17:18.47,Default,Shi,0000,0000,0000,,Osećala sam se kao da sam ostala u potpunosti sama u celom svetu.
Dialogue: 0,0:17:20.30,0:17:25.52,Default,Shi,0000,0000,0000,,Osećala sam kao da sam sama zalutala na neko pogrešno mesto.
Dialogue: 0,0:17:28.59,0:17:32.85,Default,Shi,0000,0000,0000,,Baš tada, učinilo mi se da čujem nečiji smeh.
Dialogue: 0,0:17:34.16,0:17:37.45,Default,Shi,0000,0000,0000,,Pripadao je ljudima koje sam srela tog popodneva.
Dialogue: 0,0:17:39.03,0:17:43.40,Default,Shi,0000,0000,0000,,Setivši se njihovih radosnih lica i glasova,
Dialogue: 0,0:17:44.15,0:17:47.41,Default,Shi,0000,0000,0000,,osetila sam se tako žalosno.
Dialogue: 0,0:17:47.96,0:17:50.16,Default,Shi,0000,0000,0000,,Onda sam se nasmejala, posle dugo vremena,
Dialogue: 0,0:17:51.88,0:18:00.38,Default,Shi,0000,0000,0000,,a onda su počele da mi liju suze kojih nje bilo ni kada mi je seka rekla da neću doživeti svoj sledeći rođendan.
Dialogue: 0,0:18:01.48,0:18:04.14,Default,Shi,0000,0000,0000,,To su bile suze prouzrokovane smehom, ali nisam mogla da ih zaustavim.{proveriti}
Dialogue: 0,0:18:05.08,0:18:07.99,Default,Shi,0000,0000,0000,,Tada sam shvatila da plačem jer sam bila tužna.
Dialogue: 0,0:18:08.75,0:18:09.68,Default,Shi,0000,0000,0000,,Onda...
Dialogue: 0,0:18:11.66,0:18:15.53,Default,Shi,0000,0000,0000,,...pošto sam se ismejala svim srcem, nisam više mogla da se isečem.
Dialogue: 0,0:18:17.11,0:18:20.82,Default,Shi,0000,0000,0000,,Možda je to bilo čudo.
Dialogue: 0,0:18:21.03,0:18:22.68,Default,Yuu,0000,0000,0000,,To je tvoja snaga. {ep 17}
Dialogue: 0,0:18:23.04,0:18:25.17,Default,Shi,0000,0000,0000,,Ja sam slaba osoba.{ep 17}
Dialogue: 0,0:18:25.87,0:18:29.79,Default,Shi,0000,0000,0000,,Slaba osoba koja ne može da živi bez oslanjanja na druge ljude.{ep 17}
Dialogue: 0,0:18:30.18,0:18:31.80,Default,Yuu,0000,0000,0000,,To je u redu!
Dialogue: 0,0:18:32.16,0:18:35.30,Default,Yuu,0000,0000,0000,,Svi moraju da se oslanjaju na druge da bi mogli da žive.
Dialogue: 0,0:18:37.65,0:18:41.09,Default,Yuu,0000,0000,0000,,Zove se čudo, jer postoji verovatnoća da će se dogoditi.
Dialogue: 0,0:18:41.57,0:18:43.50,Default,Shi,0000,0000,0000,,Možda si u pravu.
Dialogue: 0,0:18:44.04,0:18:45.97,Default,Yuu,0000,0000,0000,,Hoćeš li da mi obećaš nešto?
Dialogue: 0,0:18:45.97,0:18:48.03,Default,Shi,0000,0000,0000,,Da obećam?
Dialogue: 0,0:18:48.03,0:18:51.69,Default,Yuu,0000,0000,0000,,Ako se nekim slučajem dogodi čudo, častićeš me ručkom u menzi.
Dialogue: 0,0:18:52.07,0:18:54.97,Default,Shi,0000,0000,0000,,U redu, obećavam.
Dialogue: 0,0:18:57.41,0:19:00.45,Default,Shi,0000,0000,0000,,Juići, toliko sam se zabavila danas.
Dialogue: 0,0:19:00.45,0:19:02.16,Default,Yuu,0000,0000,0000,,I ja sam se zabavio.
Dialogue: 0,0:19:02.16,0:19:05.66,Default,Shi,0000,0000,0000,,Volela bih da još jednom odemo zajedno u onaj kafe.
Dialogue: 0,0:19:05.87,0:19:06.56,Default,Yuu,0000,0000,0000,,Aha.
Dialogue: 0,0:19:06.81,0:19:10.21,Default,Shi,0000,0000,0000,,I volela bih da opet šetamo zajedno glavnom ulicom.
Dialogue: 0,0:19:10.42,0:19:11.11,Default,Yuu,0000,0000,0000,,Aha.
Dialogue: 0,0:19:11.35,0:19:15.11,Default,Shi,0000,0000,0000,,Danas sam stekla novu prijateljicu u školi.
Dialogue: 0,0:19:16.34,0:19:20.51,Default,Shi,0000,0000,0000,,Pozvala me je da se zabavimo negde zajedno sledeći put.
Dialogue: 0,0:19:20.98,0:19:22.72,Default,Yuu,0000,0000,0000,,To je odlično.
Dialogue: 0,0:19:23.10,0:19:28.98,Default,Shi,0000,0000,0000,,Ima toliko mesta koja još želim da posetim i stvari koje želim da učinim.
Dialogue: 0,0:19:31.12,0:19:33.98,Default,Shi,0000,0000,0000,,Mislim da ne želim da umrem.
Dialogue: 0,0:19:34.69,0:19:39.99,Default,Shi,0000,0000,0000,,Verovatno nije trebalo ovoliko da se zbližim sa ljudima.
Dialogue: 0,0:19:39.99,0:19:41.09,Default,Yuu,0000,0000,0000,,Misliš?
Dialogue: 0,0:19:41.83,0:19:46.43,Default,Shi,0000,0000,0000,,Zato što ću samo učiniti da ti ljudi pate kao moja seka.
Dialogue: 0,0:19:49.38,0:19:51.91,Default,Yuu,0000,0000,0000,,Meni je drago što sam te upoznao, Šiori.
Dialogue: 0,0:19:54.16,0:19:55.25,Default,Shi,0000,0000,0000,,Stvarno?
Dialogue: 0,0:19:55.46,0:19:57.46,Default,Yuu,0000,0000,0000,,Naravno. Ne lažem te.
Dialogue: 0,0:20:03.75,0:20:05.83,Default,Shi,0000,0000,0000,,Jesam li uspela da zadržim osmeh?{ep 17}
Dialogue: 0,0:20:10.22,0:20:13.88,Default,Shi,0000,0000,0000,,Jesam li uspela da se smešim sve vreme?
Dialogue: 0,0:20:13.88,0:20:14.80,Default,Yuu,0000,0000,0000,,D{\fscx200}-
Dialogue: 0,0:20:18.51,0:20:19.24,Default,Yuu,0000,0000,0000,,Da.
Dialogue: 0,0:20:19.79,0:20:20.61,Default,Yuu,0000,0000,0000,,Uspela si.
Dialogue: 0,0:20:21.81,0:20:23.07,Default,Shi,0000,0000,0000,,Drago mi je.
Dialogue: 0,0:20:31.16,0:20:32.76,Default,Shi,0000,0000,0000,,Uskoro je vreme.
Dialogue: 0,0:20:32.76,0:20:33.41,Default,Yuu,0000,0000,0000,,Da.
Dialogue: 0,0:20:33.85,0:20:37.74,Default,Shi,0000,0000,0000,,Kada nastupi dvanaest sati, napuniću šesnaest godina.
Dialogue: 0,0:20:37.74,0:20:38.59,Default,Yuu,0000,0000,0000,,Tako je.
Dialogue: 0,0:20:46.69,0:20:48.84,Default,Yuu,0000,0000,0000,,Srećan rođendan, Šiori.
Dialogue: 0,0:20:50.72,0:20:52.14,Default,Shi,0000,0000,0000,,Mogu li da ga otvorim?
Dialogue: 0,0:20:52.14,0:20:52.86,Default,Yuu,0000,0000,0000,,Naravno.
Dialogue: 0,0:20:59.19,0:21:00.69,Default,Yuu,0000,0000,0000,,Ispuni je celu.
Dialogue: 0,0:21:00.90,0:21:01.94,Default,Shi,0000,0000,0000,,Hoću.
Dialogue: 0,0:21:03.43,0:21:05.05,Default,Shi,0000,0000,0000,,Hvala ti.
Dialogue: 0,0:21:05.05,0:21:06.64,Default,Shi,0000,0000,0000,,Čuvaću je.
Dialogue: 0,0:21:06.64,0:21:07.41,Default,Yuu,0000,0000,0000,,Aha.
Dialogue: 0,0:21:11.90,0:21:12.90,Default,Shi,0000,0000,0000,,Juići.
Dialogue: 0,0:21:18.04,0:21:20.46,Default,Shi,0000,0000,0000,,Idem da nam kupim nešto toplo.
Dialogue: 0,0:21:20.67,0:21:22.49,Default,Shi,0000,0000,0000,,Ti ostani ovde, Juići.
Dialogue: 0,0:21:46.24,0:21:47.15,Default,Yuu,0000,0000,0000,,Baš se ne žuri.
Dialogue: 0,0:21:52.30,0:21:56.01,Note,,0000,0000,0000,,Hvala ti mnogo - zbogom.
Dialogue: 0,0:22:04.78,0:22:07.25,Default,Yuu,0000,0000,0000,,Srećan rođendan, Šiori.
