Dialogue: 0,0:08:34.15,0:08:36.83,HaruhiDefault,,0000,0000,0000,,{\i1}Tim koji će najverovatnije da osvoji ovaj turnir.
Dialogue: 0,0:08:36.83,0:08:39.61,HaruhiDefault,,0000,0000,0000,,{\i1}Igra se završava sa 10 poena razlike...
Dialogue: 0,0:08:39.61,0:08:43.00,HaruhiDefault,,0000,0000,0000,,{\i1}...tako da bi sada bilo dobro vreme da počnemo da se pakujemo.
Dialogue: 0,0:08:45.83,0:08:47.17,HaruhiDefault,,0000,0000,0000,,Igrajte!
Dialogue: 0,0:09:00.98,0:09:03.22,HaruhiDefault,,0000,0000,0000,,To je bio skroz slab udarac!
Dialogue: 0,0:09:03.22,0:09:05.16,HaruhiDefault,,0000,0000,0000,,Pratite moj primer!
Dialogue: 0,0:09:08.54,0:09:09.86,HaruhiDefault,,0000,0000,0000,,Nadam se dobroj utakmici...
Dialogue: 0,0:09:10.24,0:09:10.82,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:09:12.07,0:09:14.58,HaruhiDefault,,0000,0000,0000,,{\i1}Kako se usuđuješ da baciš pravu loptu Asahini!?
Dialogue: 0,0:09:14.58,0:09:15.96,HaruhiDefault,,0000,0000,0000,,{\i1}Ako je pogodiš, odmah će početi tuča!
Dialogue: 0,0:09:15.96,0:09:17.17,HaruhiDefault,,0000,0000,0000,,{\i1}Sa celom ekipom!
Dialogue: 0,0:09:19.09,0:09:19.80,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:09:19.80,0:09:21.24,HaruhiDefault,,0000,0000,0000,,Mikuru!
Dialogue: 0,0:09:21.24,0:09:22.89,HaruhiDefault,,0000,0000,0000,,Zamahni ovako!
Dialogue: 0,0:09:22.89,0:09:24.11,HaruhiDefault,,0000,0000,0000,,Ovako!
Dialogue: 0,0:09:24.79,0:09:25.64,HaruhiDefault,,0000,0000,0000,,Strajk aut!
Dialogue: 0,0:09:26.79,0:09:27.97,HaruhiDefault,,0000,0000,0000,,Hej!
Dialogue: 0,0:09:27.97,0:09:29.79,HaruhiDefault,,0000,0000,0000,,Zašto nisi zamahivala sa palicom!?
Dialogue: 0,0:09:30.16,0:09:30.71,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:09:31.19,0:09:31.63,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:09:32.05,0:09:33.42,HaruhiDefault,,0000,0000,0000,,Strajk aut!
Dialogue: 0,0:09:33.42,0:09:34.60,HaruhiDefault,,0000,0000,0000,,Juki!
Dialogue: 0,0:09:34.60,0:09:36.43,HaruhiDefault,,0000,0000,0000,,Ne možeš da pogodiš loptu ako ne zamahneš!
Dialogue: 0,0:09:36.97,0:09:37.75,HaruhiDefault,,0000,0000,0000,,Kjon!
Dialogue: 0,0:09:37.75,0:09:39.44,HaruhiDefault,,0000,0000,0000,,Bolje bi ti bilo da je udariš!
Dialogue: 0,0:09:39.44,0:09:40.66,HaruhiDefault,,0000,0000,0000,,Ti si četvrti!
Dialogue: 0,0:09:40.66,0:09:43.14,HaruhiDefault,,0000,0000,0000,,{\i1}Šta možeš da očekuješ od četvrtog izabranog preko lutrije?
Dialogue: 0,0:09:45.26,0:09:46.02,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:09:46.66,0:09:48.98,HaruhiDefault,,0000,0000,0000,,{\i1}Haruhi je opalila ovu loptu?
Dialogue: 0,0:09:49.61,0:09:50.23,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:09:58.32,0:10:00.32,HaruhiDefault,,0000,0000,0000,,Strajk aut!
Dialogue: 0,0:10:00.32,0:10:01.30,HaruhiDefault,,0000,0000,0000,,Budalo!
Dialogue: 0,0:10:01.30,0:10:03.04,HaruhiDefault,,0000,0000,0000,,Šta to radiš!?
Dialogue: 0,0:10:01.77,0:10:02.62,HaruhiDefault,,0000,0000,0000,,{\i1\an8}Sranje.
Dialogue: 0,0:10:05.28,0:10:06.71,HaruhiDefault,,0000,0000,0000,,Hajde da im ne damo poen!
Dialogue: 0,0:10:11.50,0:10:11.96,HaruhiDefault,,0000,0000,0000,,Igrajte!
Dialogue: 0,0:10:14.66,0:10:15.48,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:10:18.81,0:10:19.18,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:10:20.82,0:10:21.93,HaruhiDefault,,0000,0000,0000,,Strajk aut!
Dialogue: 0,0:10:22.33,0:10:23.56,HaruhiDefault,,0000,0000,0000,,Dobro bacanje!
Dialogue: 0,0:10:23.92,0:10:25.78,HaruhiDefault,,0000,0000,0000,,Lako! Previše lako!
Dialogue: 0,0:10:31.52,0:10:32.47,HaruhiDefault,,0000,0000,0000,,Faul!
Dialogue: 0,0:10:47.76,0:10:50.70,HaruhiDefault,,0000,0000,0000,,{\i1}Ako možeš samo da bacaš prave lopte u oblast udarca...
Dialogue: 0,0:10:50.08,0:10:51.93,HaruhiDefault,,0000,0000,0000,,{\an8}Moja! Moja!
Dialogue: 0,0:10:50.70,0:10:53.22,HaruhiDefault,,0000,0000,0000,,{\i1}...jednom kada te provale, lako će ih udarati.
Dialogue: 0,0:10:53.22,0:10:57.59,HaruhiDefault,,0000,0000,0000,,{\i1}A i naša odbrana ima više rupa nego mravinjak u savani.
Dialogue: 0,0:10:55.89,0:10:56.67,HaruhiDefault,,0000,0000,0000,,{\an8}Ne!
Dialogue: 0,0:10:56.67,0:10:57.59,HaruhiDefault,,0000,0000,0000,,{\an8}O-Ovaj...
Dialogue: 0,0:10:57.59,0:10:58.23,HaruhiDefault,,0000,0000,0000,,{\i1}Kao sito!
Dialogue: 0,0:10:59.84,0:11:02.51,HaruhiDefault,,0000,0000,0000,,{\i1}Činjenica da su napravili samo dva poena tokom ovog kruga...
Dialogue: 0,0:11:00.30,0:11:01.80,HaruhiDefault,,0000,0000,0000,,{\an8}Odlično!
Dialogue: 0,0:11:02.51,0:11:05.76,HaruhiDefault,,0000,0000,0000,,{\i1}...mora da je zato što boginja pobede drugog tima kasni.
Dialogue: 0,0:11:05.76,0:11:08.77,HaruhiDefault,,0000,0000,0000,,{\i1}Pretpostavljam da svi žele da se opuste u nedelju.
Dialogue: 0,0:11:06.06,0:11:07.56,HaruhiDefault,,0000,0000,0000,,{\an8}Bravo!
Dialogue: 0,0:11:07.56,0:11:08.77,HaruhiNote,,0000,0000,0000,,{\bord0\fry40\1c&HFFFFFF\1a&H77&\frz-7\fs28\pos(211,232)}SOS Brigada
Dialogue: 0,0:11:07.56,0:11:08.77,HaruhiNote,,0000,0000,0000,,{\bord0\fry40\1c&HFFFFFF\1a&H77&\frz-5\fs28\pos(145,266)}Kamigahara
Dialogue: 0,0:11:07.56,0:11:08.77,HaruhiNote,,0000,0000,0000,,{\bord0\fry40\1c&HFFFFFF\1a&H77&\frz0\fs28\pos(207,427)}Pirati
Dialogue: 0,0:11:08.77,0:11:09.59,HaruhiDefault,,0000,0000,0000,,{\an8}Strajk aut!
Dialogue: 0,0:11:08.77,0:11:12.27,HaruhiDefault,,0000,0000,0000,,{\i1}Dalje, naša ofanziva u sledećem krugu se naglo završila...
Dialogue: 0,0:11:09.59,0:11:10.32,HaruhiDefault,,0000,0000,0000,,{\an8}Strajk aut!
Dialogue: 0,0:11:10.32,0:11:10.77,HaruhiDefault,,0000,0000,0000,,{\an8}Strajk aut!
Dialogue: 0,0:11:10.77,0:11:14.52,HaruhiNote,,0000,0000,0000,,{\bord0\fry40\1c&HFFFFFF\1a&H77&\frz-7\fs28\pos(211,232)}SOS Brigada
Dialogue: 0,0:11:10.77,0:11:14.52,HaruhiNote,,0000,0000,0000,,{\bord0\fry40\1c&HFFFFFF\1a&H77&\frz-5\fs28\pos(145,266)}Kamigahara
Dialogue: 0,0:11:10.77,0:11:14.52,HaruhiNote,,0000,0000,0000,,{\bord0\fry40\1c&HFFFFFF\1a&H77&\frz0\fs28\pos(207,427)}Pirati
Dialogue: 0,0:11:12.27,0:11:15.42,HaruhiDefault,,0000,0000,0000,,{\i1}...i naši protivnici su lako povećali svoje vođstvo u drugom delu kruga.
Dialogue: 0,0:11:15.42,0:11:17.53,HaruhiDefault,,0000,0000,0000,,{\i1}Izgleda da će u sledećem krugu biti kraj.
Dialogue: 0,0:11:20.61,0:11:21.57,HaruhiDefault,,0000,0000,0000,,Aut!
Dialogue: 0,0:11:22.02,0:11:23.57,HaruhiDefault,,0000,0000,0000,,Ta je bila teška.
Dialogue: 0,0:11:23.85,0:11:26.08,HaruhiDefault,,0000,0000,0000,,Dala sam sve od sebe samo da dodirnem loptu.
Dialogue: 0,0:11:27.33,0:11:29.33,HaruhiDefault,,0000,0000,0000,,Izgleda da će nam trebati ono.
Dialogue: 0,0:11:30.83,0:11:32.44,HaruhiDefault,,0000,0000,0000,,Hej! Tajm aut!
Dialogue: 0,0:11:34.55,0:11:36.09,HaruhiDefault,,0000,0000,0000,,Č-Čekaj!
Dialogue: 0,0:11:36.09,0:11:37.26,HaruhiDefault,,0000,0000,0000,,Suzumija!
Dialogue: 0,0:11:37.26,0:11:39.21,HaruhiDefault,,0000,0000,0000,,S-Stani!
Dialogue: 0,0:11:38.09,0:11:39.17,HaruhiDefault,,0000,0000,0000,,{\3c&H000000&}- Budalo! Hajde!
Dialogue: 0,0:11:39.21,0:11:41.59,HaruhiDefault,,0000,0000,0000,,Skidaj se i presvlači se!
Dialogue: 0,0:11:44.76,0:11:45.93,HaruhiDefault,,0000,0000,0000,,Mikuru!
Dialogue: 0,0:11:45.02,0:11:46.13,HaruhiDefault,,0000,0000,0000,,{\3c&H000000&}- Dobro izgledate.
Dialogue: 0,0:11:45.93,0:11:47.57,HaruhiDefault,,0000,0000,0000,,Mogu li da vas slikam?
Dialogue: 0,0:11:47.57,0:11:49.19,HaruhiDefault,,0000,0000,0000,,Tako je slatko!
Dialogue: 0,0:11:49.19,0:11:50.77,HaruhiDefault,,0000,0000,0000,,Možda bi bolje izgledalo sa repićem.
Dialogue: 0,0:11:55.15,0:11:55.83,HaruhiDefault,,0000,0000,0000,,Hajde.
Dialogue: 0,0:11:55.83,0:11:56.44,HaruhiDefault,,0000,0000,0000,,Počni da navijaš.
Dialogue: 0,0:11:56.92,0:11:58.83,HaruhiDefault,,0000,0000,0000,,Ovaj... Kako se to radi?
Dialogue: 0,0:11:58.83,0:12:00.28,HaruhiDefault,,0000,0000,0000,,Ovako!
Dialogue: 0,0:12:00.28,0:12:02.89,HaruhiDefault,,0000,0000,0000,,Hajde! Viči jasno i glasno!
Dialogue: 0,0:12:02.89,0:12:04.24,HaruhiDefault,,0000,0000,0000,,N-Narode!
Dialogue: 0,0:12:04.24,0:12:05.45,HaruhiDefault,,0000,0000,0000,,Molim vas da pogodite loptu!
Dialogue: 0,0:12:05.73,0:12:07.95,HaruhiDefault,,0000,0000,0000,,Dajte sve od sebe!
Dialogue: 0,0:12:08.57,0:12:09.58,HaruhiDefault,,0000,0000,0000,,Samo me gledajte!
Dialogue: 0,0:12:10.21,0:12:10.83,HaruhiDefault,,0000,0000,0000,,Strajk aut!
Dialogue: 0,0:12:11.41,0:12:12.91,HaruhiDefault,,0000,0000,0000,,Nema šanse da udarim ono.
Dialogue: 0,0:12:13.58,0:12:14.25,HaruhiDefault,,0000,0000,0000,,Nema veze.
Dialogue: 0,0:12:14.25,0:12:15.79,HaruhiDefault,,0000,0000,0000,,Nisam očekivala ništa od tebe.
Dialogue: 0,0:12:30.48,0:12:31.02,HaruhiDefault,,0000,0000,0000,,Bezbedna!
Dialogue: 0,0:12:31.48,0:12:32.61,HaruhiDefault,,0000,0000,0000,,Mikuru!
Dialogue: 0,0:12:32.61,0:12:34.60,HaruhiDefault,,0000,0000,0000,,Bolje bi bilo da je udariš ovaj put!
Dialogue: 0,0:12:33.59,0:12:35.76,HaruhiDefault,,0000,0000,0000,,{\3c&H000000&}- Mikuru! Možeš ti to!
Dialogue: 0,0:12:34.60,0:12:36.02,HaruhiDefault,,0000,0000,0000,,Asahina!
Dialogue: 0,0:12:39.36,0:12:40.03,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:12:40.03,0:12:41.12,HaruhiDefault,,0000,0000,0000,,Mikuru!
Dialogue: 0,0:12:41.12,0:12:43.27,HaruhiDefault,,0000,0000,0000,,Ovo! Ovo!
Dialogue: 0,0:12:43.27,0:12:44.74,HaruhiDefault,,0000,0000,0000,,Šta to ona radi?
Dialogue: 0,0:12:45.47,0:12:49.14,HaruhiDefault,,0000,0000,0000,,Da li pokušava da smanji magične poene protivničkog bacača?
Dialogue: 0,0:12:49.14,0:12:51.75,HaruhiDefault,,0000,0000,0000,,Izgleda da daje znak.
Dialogue: 0,0:12:52.09,0:12:53.79,HaruhiDefault,,0000,0000,0000,,Jesmo li se dogovorili za neke znake?
Dialogue: 0,0:12:53.79,0:12:54.67,HaruhiDefault,,0000,0000,0000,,Ne.
Dialogue: 0,0:12:55.02,0:12:55.94,HaruhiDefault,,0000,0000,0000,,Ali...
Dialogue: 0,0:12:55.94,0:12:59.20,HaruhiDefault,,0000,0000,0000,,...verovatno signalira za žrtveni bant.
Dialogue: 0,0:12:59.20,0:13:02.17,HaruhiDefault,,0000,0000,0000,,Bant prema prvome, sa dva izbačena?
Dialogue: 0,0:13:02.60,0:13:06.35,HaruhiDefault,,0000,0000,0000,,Čak i jedan od onih bezveznih trenera bi obavio bolji posao od ovoga.
Dialogue: 0,0:13:06.69,0:13:11.75,HaruhiDefault,,0000,0000,0000,,Pretpostavljajući da je šansa da Asahina pogodi loptu praktično nikakva...
Dialogue: 0,0:13:11.75,0:13:15.87,HaruhiDefault,,0000,0000,0000,,...korišćenje žrtvenog banta kada je najmanje očekivan da iznenadi protivnički tim...
Dialogue: 0,0:13:15.87,0:13:18.95,HaruhiDefault,,0000,0000,0000,,...bi moglo da natera unutrašnje igrače da naprave grešku...
Dialogue: 0,0:13:18.95,0:13:25.03,HaruhiDefault,,0000,0000,0000,,...ili možda ona misli da čak i Asahina može da ostvari kontakt sa loptom.
Dialogue: 0,0:13:25.49,0:13:27.29,HaruhiDefault,,0000,0000,0000,,Ali već su provalili sve.
Dialogue: 0,0:13:28.64,0:13:29.43,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:13:30.46,0:13:31.54,HaruhiDefault,,0000,0000,0000,,Strajk aut!
Dialogue: 0,0:13:31.54,0:13:32.67,HaruhiDefault,,0000,0000,0000,,Mikuru!
Dialogue: 0,0:13:32.67,0:13:35.37,HaruhiDefault,,0000,0000,0000,,Dođi ovde i spremi se za dozu bola!
Dialogue: 0,0:13:35.37,0:13:36.94,HaruhiDefault,,0000,0000,0000,,Ovo je kazna! Kazna!
Dialogue: 0,0:13:36.94,0:13:39.96,HaruhiDefault,,0000,0000,0000,,Neka svi vide tvoje smešno lice.
Dialogue: 0,0:13:39.96,0:13:41.66,HaruhiDefault,,0000,0000,0000,,Molim te stani...
Dialogue: 0,0:13:41.66,0:13:42.85,HaruhiDefault,,0000,0000,0000,,Jesi li ti budala?
Dialogue: 0,0:13:44.14,0:13:46.84,HaruhiDefault,,0000,0000,0000,,Tvoja je krivica što daješ znake koji nemaju smisla.
Dialogue: 0,0:13:46.84,0:13:49.22,HaruhiDefault,,0000,0000,0000,,Samo napravi poen sama ili šta god.
Dialogue: 0,0:13:58.62,0:14:00.40,HaruhiDefault,,0000,0000,0000,,Stvari su krenule naopako.
Dialogue: 0,0:14:00.68,0:14:02.46,HaruhiDefault,,0000,0000,0000,,Ne želim baš to da čujem, ali reci.
Dialogue: 0,0:14:02.46,0:14:06.11,HaruhiDefault,,0000,0000,0000,,Prikriveni prostor se pojavio u veličini nikada ranije primećenoj.
Dialogue: 0,0:14:06.11,0:14:08.86,HaruhiDefault,,0000,0000,0000,,Izgleda da se širi alarmantnom brzinom.
Dialogue: 0,0:14:10.38,0:14:13.37,HaruhiDefault,,0000,0000,0000,,Dokle god Suzumija ostane loše raspoložena, nastaviće da se širi...
Dialogue: 0,0:14:13.86,0:14:17.02,HaruhiDefault,,0000,0000,0000,,...i oni će nastaviti da besne okolo.
Dialogue: 0,0:14:17.02,0:14:19.13,HaruhiDefault,,0000,0000,0000,,Samo zato što gubimo?
Dialogue: 0,0:14:19.13,0:14:21.19,HaruhiDefault,,0000,0000,0000,,Baš je puna sebe.
Dialogue: 0,0:14:21.19,0:14:23.20,HaruhiDefault,,0000,0000,0000,,Zvučiš kao da to nije tvoj problem...
Dialogue: 0,0:14:23.20,0:14:26.27,HaruhiDefault,,0000,0000,0000,,...ali ovaj incident je uglavnom zbog tebe.
Dialogue: 0,0:14:26.27,0:14:29.89,HaruhiDefault,,0000,0000,0000,,Na kraju krajeva, lutrijom smo odredili red udaranja.
Dialogue: 0,0:14:30.67,0:14:33.22,HaruhiDefault,,0000,0000,0000,,I time si ti postao četvrti.
Dialogue: 0,0:14:33.22,0:14:34.70,HaruhiDefault,,0000,0000,0000,,Nisam preterano srećan zbog toga.
Dialogue: 0,0:14:34.70,0:14:36.56,HaruhiDefault,,0000,0000,0000,,Postao si četvrti...
Dialogue: 0,0:14:36.56,0:14:38.88,HaruhiDefault,,0000,0000,0000,,...zato što je Suzumija to želela.
Dialogue: 0,0:14:38.88,0:14:40.40,HaruhiDefault,,0000,0000,0000,,To nije bila slučajnost.
Dialogue: 0,0:14:40.72,0:14:41.59,HaruhiDefault,,0000,0000,0000,,I onda...
Dialogue: 0,0:14:41.59,0:14:45.40,HaruhiDefault,,0000,0000,0000,,...je bila razočarana tvojim žalosnim izvođenjem.
Dialogue: 0,0:14:45.67,0:14:47.00,HaruhiDefault,,0000,0000,0000,,Pa izvini zbog toga.
Dialogue: 0,0:14:47.00,0:14:47.61,HaruhiDefault,,0000,0000,0000,,U svakom slučaju...
Dialogue: 0,0:14:48.12,0:14:51.96,HaruhiDefault,,0000,0000,0000,,...hajde da učinimo sve u našoj moći da ne dozvolimo da se igra završi u ovom krugu.
Dialogue: 0,0:14:51.96,0:14:54.22,HaruhiDefault,,0000,0000,0000,,Ako se igra završi sada...
Dialogue: 0,0:14:54.22,0:14:56.12,HaruhiDefault,,0000,0000,0000,,...to će značiti kraj ovog sveta.
Dialogue: 0,0:14:56.12,0:14:56.98,HaruhiDefault,,0000,0000,0000,,Hajde!
Dialogue: 0,0:14:56.98,0:14:58.04,HaruhiDefault,,0000,0000,0000,,Krećemo!
Dialogue: 0,0:14:58.04,0:15:00.90,HaruhiDefault,,0000,0000,0000,,Moramo da učinimo sve što možemo da ih zadržimo na dva poena.
Dialogue: 0,0:15:05.63,0:15:08.34,HaruhiDefault,,0000,0000,0000,,{\i1}Dva auta. Trkači na prvoj i drugoj bazi.
Dialogue: 0,0:15:08.34,0:15:12.59,HaruhiNote,,0000,0000,0000,,{\bord0\fry40\1c&HFFFFFF\1a&H77&\frz-7\fs28\pos(211,232)}SOS Brigada
Dialogue: 0,0:15:08.34,0:15:12.59,HaruhiNote,,0000,0000,0000,,{\bord0\fry40\1c&HFFFFFF\1a&H77&\frz-5\fs28\pos(145,266)}Kamigahara
Dialogue: 0,0:15:08.34,0:15:12.59,HaruhiNote,,0000,0000,0000,,{\bord0\fry40\1c&HFFFFFF\1a&H77&\frz0\fs28\pos(207,427)}Pirati
Dialogue: 0,0:15:08.66,0:15:10.50,HaruhiDefault,,0000,0000,0000,,{\i1}Trenutni rezultat: 0-9.
Dialogue: 0,0:15:10.50,0:15:12.59,HaruhiDefault,,0000,0000,0000,,{\i1}Igra će biti gotova ako dobiju još jedan poen.
Dialogue: 0,0:15:15.43,0:15:17.14,HaruhiDefault,,0000,0000,0000,,Ide ka meni!
Dialogue: 0,0:15:18.39,0:15:19.34,HaruhiDefault,,0000,0000,0000,,{\i1}Stigni...
Dialogue: 0,0:15:19.34,0:15:20.55,HaruhiDefault,,0000,0000,0000,,{\i1}Stigni!
Dialogue: 0,0:15:22.12,0:15:23.61,HaruhiDefault,,0000,0000,0000,,Neverovatno!
Dialogue: 0,0:15:23.61,0:15:24.67,HaruhiDefault,,0000,0000,0000,,Dobro odrađeno!
Dialogue: 0,0:15:24.67,0:15:26.14,HaruhiDefault,,0000,0000,0000,,Svaka čast!
Dialogue: 0,0:15:25.05,0:15:26.57,HaruhiDefault,,0000,0000,0000,,{\3c&H000000&}- To je moj drugar!
Dialogue: 0,0:15:31.76,0:15:33.66,HaruhiDefault,,0000,0000,0000,,Da nastavimo sa pričom od malopre...
Dialogue: 0,0:15:33.66,0:15:34.54,HaruhiDefault,,0000,0000,0000,,Lice ti je blizu..
Dialogue: 0,0:15:34.54,0:15:35.14,HaruhiDefault,,0000,0000,0000,,Šta hoćeš?
Dialogue: 0,0:15:35.14,0:15:39.10,HaruhiDefault,,0000,0000,0000,,Tokom prošlog incidenta, kada ste ti i Suzumija bili u drugom svetu...
Dialogue: 0,0:15:39.10,0:15:40.68,HaruhiDefault,,0000,0000,0000,,...kako ste se vratili nazad?
Dialogue: 0,0:15:40.68,0:15:42.08,HaruhiDefault,,0000,0000,0000,,Ne podsećaj me na to.
Dialogue: 0,0:15:42.61,0:15:44.19,HaruhiDefault,,0000,0000,0000,,Ako bi upotrebili isti metod...
Dialogue: 0,0:15:44.19,0:15:46.33,HaruhiDefault,,0000,0000,0000,,...mogli bi se ponovo izvući iz krize.
Dialogue: 0,0:15:46.33,0:15:47.29,HaruhiDefault,,0000,0000,0000,,Odbijam.
Dialogue: 0,0:15:47.29,0:15:49.12,HaruhiDefault,,0000,0000,0000,,I mislio sam da ćeš to reći.
Dialogue: 0,0:15:49.12,0:15:51.72,HaruhiDefault,,0000,0000,0000,,Onda idem da obezbedim sredstvo naše pobede.
Dialogue: 0,0:15:52.63,0:15:53.59,HaruhiDefault,,0000,0000,0000,,Na kraju krajeva...
Dialogue: 0,0:15:53.59,0:15:56.10,HaruhiDefault,,0000,0000,0000,,...njen interes bi trebao da je sličan našem.
Dialogue: 0,0:15:59.35,0:16:01.37,HaruhiDefault,,0000,0000,0000,,Nagato je konačno...
Dialogue: 0,0:16:01.85,0:16:04.10,HaruhiDefault,,0000,0000,0000,,Šta je sa njom?
Dialogue: 0,0:16:04.10,0:16:06.19,HaruhiDefault,,0000,0000,0000,,Izgleda da izgovara magične reči.
Dialogue: 0,0:16:06.19,0:16:07.22,HaruhiDefault,,0000,0000,0000,,Magične reči?
Dialogue: 0,0:16:07.22,0:16:08.92,HaruhiDefault,,0000,0000,0000,,Šta je to?
Dialogue: 0,0:16:08.92,0:16:10.27,HaruhiDefault,,0000,0000,0000,,Ovaj...
Dialogue: 0,0:16:10.27,0:16:11.36,HaruhiDefault,,0000,0000,0000,,Poverljive informacije.
Dialogue: 0,0:16:12.95,0:16:14.37,HaruhiDefault,,0000,0000,0000,,Magične reči, jeli...
Dialogue: 0,0:16:26.77,0:16:28.09,HaruhiDefault,,0000,0000,0000,,To je bilo neverovatno!
Dialogue: 0,0:16:28.09,0:16:29.76,HaruhiDefault,,0000,0000,0000,,Gde si krila svu tu snagu?
Dialogue: 0,0:16:30.36,0:16:33.33,HaruhiDefault,,0000,0000,0000,,Ovo je modifikovano pojačanjem opisnih podataka.
Dialogue: 0,0:16:33.33,0:16:34.12,HaruhiDefault,,0000,0000,0000,,Šta to znači?
Dialogue: 0,0:16:34.12,0:16:35.42,HaruhiDefault,,0000,0000,0000,,Samo-navodeći mod.
Dialogue: 0,0:16:37.68,0:16:39.02,HaruhiDefault,,0000,0000,0000,,{\i1}Lopta je otišla van!
Dialogue: 0,0:16:40.16,0:16:41.89,HaruhiDefault,,0000,0000,0000,,{\i1}Tako znači. Samo-navođen.
Dialogue: 0,0:16:42.52,0:16:43.14,HaruhiDefault,,0000,0000,0000,,{\i1}Oh, čoveče...
Dialogue: 0,0:16:43.14,0:16:45.04,HaruhiDefault,,0000,0000,0000,,{\i1}Postoji granica ludosti.
Dialogue: 0,0:16:52.61,0:16:53.99,HaruhiDefault,,0000,0000,0000,,{\i1}Kako god okreneš...
Dialogue: 0,0:16:53.99,0:16:55.86,HaruhiDefault,,0000,0000,0000,,{\i1}...ako se ovo nastavi bićemo u nevolji...
Dialogue: 0,0:16:55.86,0:16:57.96,HaruhiDefault,,0000,0000,0000,,{\i1}na više načina...
Dialogue: 0,0:16:58.78,0:17:00.20,HaruhiDefault,,0000,0000,0000,,Dovoljno je.
Dialogue: 0,0:17:01.13,0:17:01.97,HaruhiDefault,,0000,0000,0000,,Tako.
Dialogue: 0,0:17:02.33,0:17:03.03,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:17:03.03,0:17:03.55,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:17:03.55,0:17:03.83,HaruhiDefault,,0000,0000,0000,,Strajk!
Dialogue: 0,0:17:04.49,0:17:05.90,HaruhiDefault,,0000,0000,0000,,{\i1}Zaboravio sam...
Dialogue: 0,0:17:05.90,0:17:09.02,HaruhiDefault,,0000,0000,0000,,{\i1}...ali svaka utakmica je ograničena na devedeset minuta.
Dialogue: 0,0:17:09.02,0:17:10.95,HaruhiDefault,,0000,0000,0000,,{\i1}Što znači da će sledeći krug otpasti.
Dialogue: 0,0:17:10.95,0:17:13.74,HaruhiDefault,,0000,0000,0000,,{\i1}Ako istrajemo u ovom krugu, pobedićemo.
Dialogue: 0,0:17:14.26,0:17:15.84,HaruhiDefault,,0000,0000,0000,,Da li je u redu za nas da pobedimo?
Dialogue: 0,0:17:16.11,0:17:17.99,HaruhiDefault,,0000,0000,0000,,Ne možemo da priuštimo sebi alternativu.
Dialogue: 0,0:17:17.99,0:17:19.73,HaruhiDefault,,0000,0000,0000,,Zahvaljujući našim naporima,
Dialogue: 0,0:17:19.73,0:17:23.28,HaruhiDefault,,0000,0000,0000,,...širenje prikrivenog prostora je zaustavljeno.
Dialogue: 0,0:17:23.28,0:17:26.06,HaruhiDefault,,0000,0000,0000,,Ali ako se sada povrate, dobiće nas na samom kraju.
Dialogue: 0,0:17:26.51,0:17:30.37,HaruhiDefault,,0000,0000,0000,,{\i1}Nema potrebe razmišljati u kakvom će raspoloženju Haruhi biti tada.
Dialogue: 0,0:17:30.37,0:17:31.61,HaruhiDefault,,0000,0000,0000,,I zato imam jednu ideju.
Dialogue: 0,0:17:33.85,0:17:34.70,HaruhiDefault,,0000,0000,0000,,Ozbiljno?
Dialogue: 0,0:17:34.70,0:17:35.82,HaruhiDefault,,0000,0000,0000,,Stvarno ozbiljno.
Dialogue: 0,0:17:36.59,0:17:38.97,HaruhiDefault,,0000,0000,0000,,Da izguramo kroz ovaj krug a pri tome im damo što je manje moguće poena...
Dialogue: 0,0:17:38.97,0:17:40.58,HaruhiDefault,,0000,0000,0000,,...to je naša jedina opcija.
Dialogue: 0,0:17:41.06,0:17:42.25,HaruhiDefault,,0000,0000,0000,,{\i1}Oh, čoveče...
Dialogue: 0,0:17:46.62,0:17:47.79,HaruhiDefault,,0000,0000,0000,,Bol!
Dialogue: 0,0:17:47.79,0:17:48.64,HaruhiDefault,,0000,0000,0000,,Hej!
Dialogue: 0,0:17:48.64,0:17:49.76,HaruhiDefault,,0000,0000,0000,,Budi ozbiljan!
Dialogue: 0,0:17:49.76,0:17:51.04,HaruhiDefault,,0000,0000,0000,,Pustila sam te na moje mesto...
Dialogue: 0,0:17:51.04,0:17:53.17,HaruhiDefault,,0000,0000,0000,,...zato, ako izgubiš, moraćeš da častiš sve!
Dialogue: 0,0:17:53.17,0:17:54.75,HaruhiDefault,,0000,0000,0000,,{\i1}Znam.
Dialogue: 0,0:17:54.75,0:17:58.01,HaruhiDefault,,0000,0000,0000,,{\i1}Na kraju krajeva, sudbina sveta zavisi od mog bacanja.
Dialogue: 0,0:17:58.62,0:18:00.76,HaruhiDefault,,0000,0000,0000,,{\i1}Svet baš ne vredi puno ovih dana.
Dialogue: 0,0:18:05.02,0:18:07.02,HaruhiDefault,,0000,0000,0000,,{\i1}Zahvaljujući ovoj "Misterioznoj Lopti"...
Dialogue: 0,0:18:05.58,0:18:06.06,HaruhiDefault,,0000,0000,0000,,{\an8}Strajk!
Dialogue: 0,0:18:07.02,0:18:09.67,HaruhiDefault,,0000,0000,0000,,{\i1}...kako sam je nazvao...
Dialogue: 0,0:18:09.67,0:18:11.48,HaruhiDefault,,0000,0000,0000,,{\i1}...izgleda da smo izbegli uništenje.
Dialogue: 0,0:18:13.59,0:18:15.07,HaruhiDefault,,0000,0000,0000,,D-Drugi strajk!
Dialogue: 0,0:18:15.74,0:18:16.57,HaruhiDefault,,0000,0000,0000,,Strajk aut!
Dialogue: 0,0:18:17.94,0:18:21.12,HaruhiDefault,,0000,0000,0000,,{\i1}Sledeći udarač je ispao posle tri bacanja...
Dialogue: 0,0:18:19.21,0:18:20.52,HaruhiDefault,,0000,0000,0000,,{\an8}Strajk aut!
Dialogue: 0,0:18:21.48,0:18:24.58,HaruhiDefault,,0000,0000,0000,,{\i1}...i onaj koji je verovatno trebao da bude poslednji je već popio dva strajka.
Dialogue: 0,0:18:23.59,0:18:24.58,HaruhiDefault,,0000,0000,0000,,{\an8}Drugi strajk!
Dialogue: 0,0:18:24.58,0:18:25.40,HaruhiDefault,,0000,0000,0000,,Kjon!
Dialogue: 0,0:18:25.40,0:18:27.08,HaruhiDefault,,0000,0000,0000,,Završi sa sledećim bacanjem!
Dialogue: 0,0:18:27.51,0:18:30.07,HaruhiDefault,,0000,0000,0000,,{\i1}I da mi ne kažeš, ovo je kraj.
Dialogue: 0,0:18:30.07,0:18:32.25,HaruhiDefault,,0000,0000,0000,,{\i1}Izvinite, Kamigahara Pirati.
Dialogue: 0,0:18:34.60,0:18:35.30,HaruhiDefault,,0000,0000,0000,,Sreća!
Dialogue: 0,0:18:35.68,0:18:36.67,HaruhiDefault,,0000,0000,0000,,Pobegla je, Nagato!
Dialogue: 0,0:18:37.27,0:18:38.89,HaruhiDefault,,0000,0000,0000,,Dohvati loptu i baci je!
Dialogue: 0,0:18:41.68,0:18:43.14,HaruhiDefault,,0000,0000,0000,,Požuri!
Dialogue: 0,0:18:46.98,0:18:48.19,HaruhiDefault,,0000,0000,0000,,Drugi!
Dialogue: 0,0:18:47.34,0:18:48.23,HaruhiDefault,,0000,0000,0000,,{\an8\3c&H000000&}Ovamo!
Dialogue: 0,0:18:49.66,0:18:50.02,HaruhiDefault,,0000,0000,0000,,Ha?
Dialogue: 0,0:18:53.57,0:18:55.13,HaruhiDefault,,0000,0000,0000,,Stvarno mi je žao.
Dialogue: 0,0:18:55.13,0:18:58.53,HaruhiDefault,,0000,0000,0000,,Mi smo pomalo nerazumna grupa.
Dialogue: 0,0:18:58.53,0:19:00.03,HaruhiDefault,,0000,0000,0000,,K-Kraj igre!
Dialogue: 0,0:19:00.98,0:19:03.23,HaruhiDefault,,0000,0000,0000,,{\i1}Zahvaljujući Nagatinoj nazovi magiji...
Dialogue: 0,0:19:03.23,0:19:05.37,HaruhiDefault,,0000,0000,0000,,{\i1}...ipak smo pobedili, ali...
Dialogue: 0,0:19:05.37,0:19:07.99,HaruhiDefault,,0000,0000,0000,,Šta ćemo da radimo za sledeću utakmicu?
Dialogue: 0,0:19:08.37,0:19:10.46,HaruhiDefault,,0000,0000,0000,,{\i1}Ovako nastaviti u sledeći krug...
Dialogue: 0,0:19:10.46,0:19:13.04,HaruhiDefault,,0000,0000,0000,,{\i1}...bi bilo neoprostivo prema Kamigahara Piratima. A i...
Dialogue: 0,0:19:13.38,0:19:17.84,HaruhiDefault,,0000,0000,0000,,U stvari moram da idem da pomognem svojim kolegama uskoro.
Dialogue: 0,0:19:17.84,0:19:19.86,HaruhiDefault,,0000,0000,0000,,{\i1}Nedostajaće nam članova.
Dialogue: 0,0:19:19.86,0:19:20.93,HaruhiDefault,,0000,0000,0000,,Hajde da im predamo pobedu.
Dialogue: 0,0:19:20.93,0:19:22.46,HaruhiDefault,,0000,0000,0000,,To je u redu.
Dialogue: 0,0:19:22.46,0:19:26.21,HaruhiDefault,,0000,0000,0000,,Čini se da je loša ideja dozvoliti da se Suzumija dosađuje.
Dialogue: 0,0:19:26.21,0:19:28.73,HaruhiDefault,,0000,0000,0000,,Trebali bi to da uzmemo u razmatranje tokom budućih slučajeva.
Dialogue: 0,0:19:29.77,0:19:31.46,HaruhiDefault,,0000,0000,0000,,Zabavila si se, zar ne?
Dialogue: 0,0:19:31.77,0:19:34.24,HaruhiDefault,,0000,0000,0000,,Koizumi je morao da ode pošto mu je nešto iskrslo.
Dialogue: 0,0:19:34.24,0:19:37.70,HaruhiDefault,,0000,0000,0000,,Moje noge i ruke su skroz istrošene.
Dialogue: 0,0:19:43.39,0:19:46.44,HaruhiDefault,,0000,0000,0000,,Pa, kad tako kažeš, pretpostavljam da je u redu.
Dialogue: 0,0:19:46.44,0:19:47.97,HaruhiDefault,,0000,0000,0000,,Ionako sam baš ogladnela.
Dialogue: 0,0:19:47.97,0:19:49.97,HaruhiDefault,,0000,0000,0000,,Hajde da ručamo!
Dialogue: 0,0:19:49.97,0:19:50.98,HaruhiDefault,,0000,0000,0000,,Da, da.
Dialogue: 0,0:19:52.19,0:19:53.55,HaruhiDefault,,0000,0000,0000,,Hvala ti puno!
Dialogue: 0,0:19:53.55,0:19:54.72,HaruhiDefault,,0000,0000,0000,,Nema na čemu.
Dialogue: 0,0:19:54.72,0:19:56.06,HaruhiDefault,,0000,0000,0000,,Odoh sada.
Dialogue: 0,0:19:56.59,0:19:57.67,HaruhiDefault,,0000,0000,0000,,Čekaj.
Dialogue: 0,0:19:58.13,0:19:59.67,HaruhiDefault,,0000,0000,0000,,Što se tiče te palice...
Dialogue: 0,0:20:02.17,0:20:04.39,HaruhiDefault,,0000,0000,0000,,Nisam znao da imam to u sebi.
Dialogue: 0,0:20:02.67,0:20:04.46,HaruhiDefault,,0000,0000,0000,,{\an8\3c&H000000&}Znači ti si Juki Nagato?
Dialogue: 0,0:20:04.39,0:20:06.18,HaruhiDefault,,0000,0000,0000,,Mora da sam talentovan za bejzbol.
Dialogue: 0,0:20:04.46,0:20:06.18,HaruhiDefault,,0000,0000,0000,,{\an8\3c&H000000&}Čula sam puno o tebi od Mikuru.
Dialogue: 0,0:20:06.18,0:20:08.29,HaruhiDefault,,0000,0000,0000,,Jedite koliko vam srce želi!
Dialogue: 0,0:20:08.29,0:20:09.68,HaruhiDefault,,0000,0000,0000,,Ovo nas Kjon časti!
Dialogue: 0,0:20:10.64,0:20:12.08,HaruhiDefault,,0000,0000,0000,,{\i1}Pa, dobro.
Dialogue: 0,0:20:12.08,0:20:14.71,HaruhiDefault,,0000,0000,0000,,{\i1}Uspeo sam da se dokopam nekog neočekivanog novca.
Dialogue: 0,0:20:15.07,0:20:17.89,HaruhiDefault,,0000,0000,0000,,{\i1}Ovo je za uspeh Kamigahara Pirata.
Dialogue: 0,0:20:22.93,0:20:24.79,HaruhiDefault,,0000,0000,0000,,Hajde! Hajde! Zamahni jače!
Dialogue: 0,0:20:29.35,0:20:31.33,HaruhiDefault,,0000,0000,0000,,Izvinite što kasnim!
Dialogue: 0,0:20:31.64,0:20:32.24,HaruhiDefault,,0000,0000,0000,,Hej!
Dialogue: 0,0:20:32.24,0:20:33.93,HaruhiDefault,,0000,0000,0000,,Šta ćemo sledeći put?
