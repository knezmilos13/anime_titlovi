Dialogue: 0,0:18:52.22,0:18:53.73,HaruhiDefault,,0000,0000,0000,,Zablokirano je na uključenom!
Dialogue: 0,0:18:53.73,0:18:55.23,HaruhiDefault,,0000,0000,0000,,Pristup je odbijen!
Dialogue: 0,0:18:55.23,0:18:56.69,HaruhiDefault,,0000,0000,0000,,N-Nemoguće!
Dialogue: 0,0:18:57.00,0:18:57.81,HaruhiDefault,,0000,0000,0000,,Neprijatelj otkriven!
Dialogue: 0,0:18:58.12,0:19:00.07,HaruhiDefault,,0000,0000,0000,,Paljba! Paljba! Paljba!
Dialogue: 0,0:19:03.07,0:19:03.99,HaruhiDefault,,0000,0000,0000,,Umrite, mušice!
Dialogue: 0,0:19:04.34,0:19:05.22,HaruhiDefault,,0000,0000,0000,,Hej, Kjon!
Dialogue: 0,0:19:05.22,0:19:06.36,HaruhiDefault,,0000,0000,0000,,Ti su moji!
Dialogue: 0,0:19:06.88,0:19:09.02,HaruhiDefault,,0000,0000,0000,,Dve neprijateljske flote uništene.
Dialogue: 0,0:19:09.37,0:19:10.99,HaruhiDefault,,0000,0000,0000,,Preostale flote su u haosu.
Dialogue: 0,0:19:11.38,0:19:14.02,HaruhiDefault,,0000,0000,0000,,Zahvaljujući Nagatinom mikro izviđanju...
Dialogue: 0,0:19:14.02,0:19:16.46,HaruhiDefault,,0000,0000,0000,,...tok se brzo promenio.
Dialogue: 0,0:19:16.46,0:19:19.14,HaruhiDefault,,0000,0000,0000,,Ali vođa je još uvek tamo.
Dialogue: 0,0:19:19.14,0:19:20.46,HaruhiDefault,,0000,0000,0000,,Kako da ga uništimo?
Dialogue: 0,0:19:20.46,0:19:21.71,HaruhiDefault,,0000,0000,0000,,Nema problema.
Dialogue: 0,0:19:21.71,0:19:22.84,HaruhiDefault,,0000,0000,0000,,Mi ćemo ga saterati u ćošak.
Dialogue: 0,0:19:24.83,0:19:26.05,HaruhiDefault,,0000,0000,0000,,Dovraga!
Dialogue: 0,0:19:26.99,0:19:28.43,HaruhiDefault,,0000,0000,0000,,Stvarno je dobro sateran.
Dialogue: 0,0:19:28.81,0:19:30.14,HaruhiDefault,,0000,0000,0000,,Kao miš u zamci.
Dialogue: 0,0:19:30.43,0:19:31.23,HaruhiDefault,,0000,0000,0000,,Ovaj.
Dialogue: 0,0:19:31.23,0:19:32.64,HaruhiDefault,,0000,0000,0000,,Jeli treba da pucamo u ovo?
Dialogue: 0,0:19:32.91,0:19:35.65,HaruhiDefault,,0000,0000,0000,,Ne razumem baš, ali dobro odrađeno!
Dialogue: 0,0:19:36.16,0:19:38.01,HaruhiDefault,,0000,0000,0000,,Svi brodovi, paljba svom snagom!
Dialogue: 0,0:19:38.01,0:19:41.02,HaruhiDefault,,0000,0000,0000,,Neka neprijateljski vođa oseti vatru pakla!
Dialogue: 0,0:19:48.66,0:19:49.66,HaruhiDefault,,0000,0000,0000,,Ne dajte mu da pobegne!
Dialogue: 0,0:20:02.42,0:20:06.13,HaruhiDefault,,0000,0000,0000,,Č-Čast Kompjuterskom Društvu!
Dialogue: 0,0:20:12.60,0:20:13.65,HaruhiDefault,,0000,0000,0000,,Izgubili smo.
Dialogue: 0,0:20:13.65,0:20:14.89,HaruhiDefault,,0000,0000,0000,,U potpunosti smo poraženi.
Dialogue: 0,0:20:15.30,0:20:16.86,HaruhiDefault,,0000,0000,0000,,Moram to da prihvatim kao muškarac.
Dialogue: 0,0:20:16.86,0:20:17.85,HaruhiDefault,,0000,0000,0000,,Izvinjavam se.
Dialogue: 0,0:20:17.85,0:20:18.87,HaruhiDefault,,0000,0000,0000,,Žao mi je.
Dialogue: 0,0:20:19.35,0:20:20.65,HaruhiDefault,,0000,0000,0000,,Ali ko bi pomislio...
Dialogue: 0,0:20:20.65,0:20:24.73,HaruhiDefault,,0000,0000,0000,,...da bi neko mogao da izmeni kod igre usred igranja?
Dialogue: 0,0:20:25.29,0:20:26.78,HaruhiDefault,,0000,0000,0000,,Ne mogu da verujem u to.
Dialogue: 0,0:20:26.78,0:20:28.65,HaruhiDefault,,0000,0000,0000,,O čemu pričaš?
Dialogue: 0,0:20:28.65,0:20:29.35,HaruhiDefault,,0000,0000,0000,,Pa?
Dialogue: 0,0:20:29.35,0:20:31.25,HaruhiDefault,,0000,0000,0000,,Sećaš se svog obećanja, zar ne?
Dialogue: 0,0:20:31.25,0:20:33.70,HaruhiDefault,,0000,0000,0000,,Svi ovi kompjuteri su sada naši.
Dialogue: 0,0:20:33.70,0:20:35.59,HaruhiDefault,,0000,0000,0000,,Neću ti dozvoliti da kažeš da si zaboravio!
Dialogue: 0,0:20:36.00,0:20:37.23,HaruhiDefault,,0000,0000,0000,,Hej, ti.
Dialogue: 0,0:20:38.11,0:20:40.41,HaruhiDefault,,0000,0000,0000,,Ko je bio taj koji je sve ono uradio?
Dialogue: 0,0:20:40.41,0:20:43.62,HaruhiDefault,,0000,0000,0000,,Neverovatni superhaker koji bi verovatno mogao da uhakuje bilo šta u svetu.
Dialogue: 0,0:20:44.34,0:20:45.14,HaruhiDefault,,0000,0000,0000,,Pa, dobro.
Dialogue: 0,0:20:45.14,0:20:46.63,HaruhiDefault,,0000,0000,0000,,Mogu da pogodim ko je to bio.
Dialogue: 0,0:20:50.59,0:20:51.86,HaruhiDefault,,0000,0000,0000,,Imam predlog.
Dialogue: 0,0:20:51.86,0:20:53.61,HaruhiDefault,,0000,0000,0000,,Kada god imaš slobodnog vremena...
Dialogue: 0,0:20:53.61,0:20:56.01,HaruhiDefault,,0000,0000,0000,,Hoćeš li da učestvuješ u aktivnosima Kompjuterskog Društva?
Dialogue: 0,0:20:56.01,0:20:57.00,HaruhiDefault,,0000,0000,0000,,Molim te!
Dialogue: 0,0:20:57.00,0:20:58.77,HaruhiDefault,,0000,0000,0000,,{\i1}Sada pokušava da je privoli.
Dialogue: 0,0:20:58.77,0:20:59.97,HaruhiDefault,,0000,0000,0000,,Hej, hej!
Dialogue: 0,0:20:59.97,0:21:02.18,HaruhiDefault,,0000,0000,0000,,Ne možeš da iznajmiš Juki bez moje dozvole!
Dialogue: 0,0:21:02.18,0:21:02.91,HaruhiDefault,,0000,0000,0000,,Razumeš?
Dialogue: 0,0:21:02.91,0:21:05.69,HaruhiDefault,,0000,0000,0000,,Ona je nezamenjivi tihi član SOS Brigade!
Dialogue: 0,0:21:06.07,0:21:08.51,HaruhiDefault,,0000,0000,0000,,Ja sam je prva videla!
Dialogue: 0,0:21:08.51,0:21:09.60,HaruhiDefault,,0000,0000,0000,,Čekaj malo.
Dialogue: 0,0:21:12.08,0:21:15.81,HaruhiDefault,,0000,0000,0000,,{\i1}Čak i Nagato mora da ima par stvari koje je interesuju.
Dialogue: 0,0:21:15.81,0:21:18.37,HaruhiDefault,,0000,0000,0000,,{\i1}Iz nekog razloga je izgledala kao da se zabavlja...
Dialogue: 0,0:21:18.37,0:21:20.25,HaruhiDefault,,0000,0000,0000,,{\i1}...dok je mlatila po tastaturi.
Dialogue: 0,0:21:21.12,0:21:23.31,HaruhiDefault,,0000,0000,0000,,{\i1}Ako bude zaglavljena posmatrajući Haruhi svo vreme...
Dialogue: 0,0:21:23.31,0:21:25.34,HaruhiDefault,,0000,0000,0000,,{\i1}...čak i Nagato će se umoriti.
Dialogue: 0,0:21:26.16,0:21:29.55,HaruhiDefault,,0000,0000,0000,,{\i1}Čak i humanoidni organski interfejs sačinjen od vanzemaljaca za komunikaciju...
Dialogue: 0,0:21:29.55,0:21:31.82,HaruhiDefault,,0000,0000,0000,,{\i1}...mora malo da se zabavi ponekada.
Dialogue: 0,0:21:33.95,0:21:35.22,HaruhiDefault,,0000,0000,0000,,Radi šta želiš.
Dialogue: 0,0:21:35.64,0:21:38.59,HaruhiDefault,,0000,0000,0000,,Svrati do njih kada hoćeš...
Dialogue: 0,0:21:38.59,0:21:40.41,HaruhiDefault,,0000,0000,0000,,...i poigraj se sa kompjuterima.
Dialogue: 0,0:21:45.05,0:21:45.65,HaruhiDefault,,0000,0000,0000,,Tako.
Dialogue: 0,0:21:48.78,0:21:49.74,HaruhiDefault,,0000,0000,0000,,Ponekad.
Dialogue: 0,0:21:50.01,0:21:51.08,HaruhiDefault,,0000,0000,0000,,Stvarno!?
Dialogue: 0,0:21:51.08,0:21:52.62,HaruhiDefault,,0000,0000,0000,,Čoveče, zahvalan sam ti!
Dialogue: 0,0:21:52.62,0:21:53.70,HaruhiDefault,,0000,0000,0000,,Eto ti.
Dialogue: 0,0:21:53.70,0:21:56.20,HaruhiDefault,,0000,0000,0000,,Pa, ako se Juki slaže onda je u redu.
Dialogue: 0,0:21:56.20,0:21:57.91,HaruhiDefault,,0000,0000,0000,,Ah, još jedna stvar!
Dialogue: 0,0:21:57.91,0:21:59.79,HaruhiDefault,,0000,0000,0000,,Vi ljudi ste poraženi ostaci.
Dialogue: 0,0:22:00.08,0:22:03.54,HaruhiDefault,,0000,0000,0000,,Morate da radite ono što vam pobednik naredi.
Dialogue: 0,0:22:04.00,0:22:08.50,HaruhiDefault,,0000,0000,0000,,Svi vi morate da se zakunete na apsolutnu odanost meni od sada!
Dialogue: 0,0:22:08.93,0:22:10.87,HaruhiDefault,,0000,0000,0000,,Neću se loše odnositi prema vama.
Dialogue: 0,0:22:10.87,0:22:12.22,HaruhiDefault,,0000,0000,0000,,Zavisno od toga koliko se budete trudili...
Dialogue: 0,0:22:12.22,0:22:14.60,HaruhiDefault,,0000,0000,0000,,...možda vas čak učinim i članovima brigade!
Dialogue: 0,0:22:14.60,0:22:15.44,HaruhiDefault,,0000,0000,0000,,Koizumi!
Dialogue: 0,0:22:15.44,0:22:17.68,HaruhiDefault,,0000,0000,0000,,Odmah spremi ugovore!
