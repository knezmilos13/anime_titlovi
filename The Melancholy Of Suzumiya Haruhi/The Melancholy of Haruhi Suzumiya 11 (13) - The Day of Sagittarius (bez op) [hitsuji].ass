Dialogue: 0,0:17:22.22,0:17:23.73,HaruhiDefault,,0000,0000,0000,,Zablokirano je na uključenom!
Dialogue: 0,0:17:23.73,0:17:25.23,HaruhiDefault,,0000,0000,0000,,Pristup je odbijen!
Dialogue: 0,0:17:25.23,0:17:26.69,HaruhiDefault,,0000,0000,0000,,N-Nemoguće!
Dialogue: 0,0:17:27.00,0:17:27.81,HaruhiDefault,,0000,0000,0000,,Neprijatelj otkriven!
Dialogue: 0,0:17:28.12,0:17:30.07,HaruhiDefault,,0000,0000,0000,,Paljba! Paljba! Paljba!
Dialogue: 0,0:17:33.07,0:17:33.99,HaruhiDefault,,0000,0000,0000,,Umrite, mušice!
Dialogue: 0,0:17:34.34,0:17:35.22,HaruhiDefault,,0000,0000,0000,,Hej, Kjon!
Dialogue: 0,0:17:35.22,0:17:36.36,HaruhiDefault,,0000,0000,0000,,Ti su moji!
Dialogue: 0,0:17:36.88,0:17:39.02,HaruhiDefault,,0000,0000,0000,,Dve neprijateljske flote uništene.
Dialogue: 0,0:17:39.37,0:17:40.99,HaruhiDefault,,0000,0000,0000,,Preostale flote su u haosu.
Dialogue: 0,0:17:41.38,0:17:44.02,HaruhiDefault,,0000,0000,0000,,Zahvaljujući Nagatinom mikro izviđanju...
Dialogue: 0,0:17:44.02,0:17:46.46,HaruhiDefault,,0000,0000,0000,,...tok se brzo promenio.
Dialogue: 0,0:17:46.46,0:17:49.14,HaruhiDefault,,0000,0000,0000,,Ali vođa je još uvek tamo.
Dialogue: 0,0:17:49.14,0:17:50.46,HaruhiDefault,,0000,0000,0000,,Kako da ga uništimo?
Dialogue: 0,0:17:50.46,0:17:51.71,HaruhiDefault,,0000,0000,0000,,Nema problema.
Dialogue: 0,0:17:51.71,0:17:52.84,HaruhiDefault,,0000,0000,0000,,Mi ćemo ga saterati u ćošak.
Dialogue: 0,0:17:54.83,0:17:56.05,HaruhiDefault,,0000,0000,0000,,Dovraga!
Dialogue: 0,0:17:56.99,0:17:58.43,HaruhiDefault,,0000,0000,0000,,Stvarno je dobro sateran.
Dialogue: 0,0:17:58.81,0:18:00.14,HaruhiDefault,,0000,0000,0000,,Kao miš u zamci.
Dialogue: 0,0:18:00.43,0:18:01.23,HaruhiDefault,,0000,0000,0000,,Ovaj.
Dialogue: 0,0:18:01.23,0:18:02.64,HaruhiDefault,,0000,0000,0000,,Jeli treba da pucamo u ovo?
Dialogue: 0,0:18:02.91,0:18:05.65,HaruhiDefault,,0000,0000,0000,,Ne razumem baš, ali dobro odrađeno!
Dialogue: 0,0:18:06.16,0:18:08.01,HaruhiDefault,,0000,0000,0000,,Svi brodovi, paljba svom snagom!
Dialogue: 0,0:18:08.01,0:18:11.02,HaruhiDefault,,0000,0000,0000,,Neka neprijateljski vođa oseti vatru pakla!
Dialogue: 0,0:18:18.66,0:18:19.66,HaruhiDefault,,0000,0000,0000,,Ne dajte mu da pobegne!
Dialogue: 0,0:18:32.42,0:18:36.13,HaruhiDefault,,0000,0000,0000,,Č-Čast Kompjuterskom Društvu!
Dialogue: 0,0:18:42.60,0:18:43.65,HaruhiDefault,,0000,0000,0000,,Izgubili smo.
Dialogue: 0,0:18:43.65,0:18:44.89,HaruhiDefault,,0000,0000,0000,,U potpunosti smo poraženi.
Dialogue: 0,0:18:45.30,0:18:46.86,HaruhiDefault,,0000,0000,0000,,Moram to da prihvatim kao muškarac.
Dialogue: 0,0:18:46.86,0:18:47.85,HaruhiDefault,,0000,0000,0000,,Izvinjavam se.
Dialogue: 0,0:18:47.85,0:18:48.87,HaruhiDefault,,0000,0000,0000,,Žao mi je.
Dialogue: 0,0:18:49.35,0:18:50.65,HaruhiDefault,,0000,0000,0000,,Ali ko bi pomislio...
Dialogue: 0,0:18:50.65,0:18:54.73,HaruhiDefault,,0000,0000,0000,,...da bi neko mogao da izmeni kod igre usred igranja?
Dialogue: 0,0:18:55.29,0:18:56.78,HaruhiDefault,,0000,0000,0000,,Ne mogu da verujem u to.
Dialogue: 0,0:18:56.78,0:18:58.65,HaruhiDefault,,0000,0000,0000,,O čemu pričaš?
Dialogue: 0,0:18:58.65,0:18:59.35,HaruhiDefault,,0000,0000,0000,,Pa?
Dialogue: 0,0:18:59.35,0:19:01.25,HaruhiDefault,,0000,0000,0000,,Sećaš se svog obećanja, zar ne?
Dialogue: 0,0:19:01.25,0:19:03.70,HaruhiDefault,,0000,0000,0000,,Svi ovi kompjuteri su sada naši.
Dialogue: 0,0:19:03.70,0:19:05.59,HaruhiDefault,,0000,0000,0000,,Neću ti dozvoliti da kažeš da si zaboravio!
Dialogue: 0,0:19:06.00,0:19:07.23,HaruhiDefault,,0000,0000,0000,,Hej, ti.
Dialogue: 0,0:19:08.11,0:19:10.41,HaruhiDefault,,0000,0000,0000,,Ko je bio taj koji je sve ono uradio?
Dialogue: 0,0:19:10.41,0:19:13.62,HaruhiDefault,,0000,0000,0000,,Neverovatni superhaker koji bi verovatno mogao da uhakuje bilo šta u svetu.
Dialogue: 0,0:19:14.34,0:19:15.14,HaruhiDefault,,0000,0000,0000,,Pa, dobro.
Dialogue: 0,0:19:15.14,0:19:16.63,HaruhiDefault,,0000,0000,0000,,Mogu da pogodim ko je to bio.
Dialogue: 0,0:19:20.59,0:19:21.86,HaruhiDefault,,0000,0000,0000,,Imam predlog.
Dialogue: 0,0:19:21.86,0:19:23.61,HaruhiDefault,,0000,0000,0000,,Kada god imaš slobodnog vremena...
Dialogue: 0,0:19:23.61,0:19:26.01,HaruhiDefault,,0000,0000,0000,,Hoćeš li da učestvuješ u aktivnosima Kompjuterskog Društva?
Dialogue: 0,0:19:26.01,0:19:27.00,HaruhiDefault,,0000,0000,0000,,Molim te!
Dialogue: 0,0:19:27.00,0:19:28.77,HaruhiDefault,,0000,0000,0000,,{\i1}Sada pokušava da je privoli.
Dialogue: 0,0:19:28.77,0:19:29.97,HaruhiDefault,,0000,0000,0000,,Hej, hej!
Dialogue: 0,0:19:29.97,0:19:32.18,HaruhiDefault,,0000,0000,0000,,Ne možeš da iznajmiš Juki bez moje dozvole!
Dialogue: 0,0:19:32.18,0:19:32.91,HaruhiDefault,,0000,0000,0000,,Razumeš?
Dialogue: 0,0:19:32.91,0:19:35.69,HaruhiDefault,,0000,0000,0000,,Ona je nezamenjivi tihi član SOS Brigade!
Dialogue: 0,0:19:36.07,0:19:38.51,HaruhiDefault,,0000,0000,0000,,Ja sam je prva videla!
Dialogue: 0,0:19:38.51,0:19:39.60,HaruhiDefault,,0000,0000,0000,,Čekaj malo.
Dialogue: 0,0:19:42.08,0:19:45.81,HaruhiDefault,,0000,0000,0000,,{\i1}Čak i Nagato mora da ima par stvari koje je interesuju.
Dialogue: 0,0:19:45.81,0:19:48.37,HaruhiDefault,,0000,0000,0000,,{\i1}Iz nekog razloga je izgledala kao da se zabavlja...
Dialogue: 0,0:19:48.37,0:19:50.25,HaruhiDefault,,0000,0000,0000,,{\i1}...dok je mlatila po tastaturi.
Dialogue: 0,0:19:51.12,0:19:53.31,HaruhiDefault,,0000,0000,0000,,{\i1}Ako bude zaglavljena posmatrajući Haruhi svo vreme...
Dialogue: 0,0:19:53.31,0:19:55.34,HaruhiDefault,,0000,0000,0000,,{\i1}...čak i Nagato će se umoriti.
Dialogue: 0,0:19:56.16,0:19:59.55,HaruhiDefault,,0000,0000,0000,,{\i1}Čak i humanoidni organski interfejs sačinjen od vanzemaljaca za komunikaciju...
Dialogue: 0,0:19:59.55,0:20:01.82,HaruhiDefault,,0000,0000,0000,,{\i1}...mora malo da se zabavi ponekada.
Dialogue: 0,0:20:03.95,0:20:05.22,HaruhiDefault,,0000,0000,0000,,Radi šta želiš.
Dialogue: 0,0:20:05.64,0:20:08.59,HaruhiDefault,,0000,0000,0000,,Svrati do njih kada hoćeš...
Dialogue: 0,0:20:08.59,0:20:10.41,HaruhiDefault,,0000,0000,0000,,...i poigraj se sa kompjuterima.
Dialogue: 0,0:20:15.05,0:20:15.65,HaruhiDefault,,0000,0000,0000,,Tako.
Dialogue: 0,0:20:18.78,0:20:19.74,HaruhiDefault,,0000,0000,0000,,Ponekad.
Dialogue: 0,0:20:20.01,0:20:21.08,HaruhiDefault,,0000,0000,0000,,Stvarno!?
Dialogue: 0,0:20:21.08,0:20:22.62,HaruhiDefault,,0000,0000,0000,,Čoveče, zahvalan sam ti!
Dialogue: 0,0:20:22.62,0:20:23.70,HaruhiDefault,,0000,0000,0000,,Eto ti.
Dialogue: 0,0:20:23.70,0:20:26.20,HaruhiDefault,,0000,0000,0000,,Pa, ako se Juki slaže onda je u redu.
Dialogue: 0,0:20:26.20,0:20:27.91,HaruhiDefault,,0000,0000,0000,,Ah, još jedna stvar!
Dialogue: 0,0:20:27.91,0:20:29.79,HaruhiDefault,,0000,0000,0000,,Vi ljudi ste poraženi ostaci.
Dialogue: 0,0:20:30.08,0:20:33.54,HaruhiDefault,,0000,0000,0000,,Morate da radite ono što vam pobednik naredi.
Dialogue: 0,0:20:34.00,0:20:38.50,HaruhiDefault,,0000,0000,0000,,Svi vi morate da se zakunete na apsolutnu odanost meni od sada!
Dialogue: 0,0:20:38.93,0:20:40.87,HaruhiDefault,,0000,0000,0000,,Neću se loše odnositi prema vama.
Dialogue: 0,0:20:40.87,0:20:42.22,HaruhiDefault,,0000,0000,0000,,Zavisno od toga koliko se budete trudili...
Dialogue: 0,0:20:42.22,0:20:44.60,HaruhiDefault,,0000,0000,0000,,...možda vas čak učinim i članovima brigade!
Dialogue: 0,0:20:44.60,0:20:45.44,HaruhiDefault,,0000,0000,0000,,Koizumi!
Dialogue: 0,0:20:45.44,0:20:47.68,HaruhiDefault,,0000,0000,0000,,Odmah spremi ugovore!
